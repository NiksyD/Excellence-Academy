@model IEnumerable<MyWebApplication.Models.LockerRequest>

@{
    ViewData["Title"] = "Locker Requests - Excellence Academy";
}

<!-- Header Section -->
<section class="bg-primary text-white py-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold mb-2">
                    <i class="fas fa-key me-3"></i>Locker Requests
                </h1>
                <p class="lead mb-0">Manage student locker requests and assignments</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Create" class="btn btn-light btn-lg rounded-pill px-4">
                    <i class="fas fa-plus me-2"></i>New Request
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<div class="container py-5">
    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-primary mb-2">
                        <i class="fas fa-clipboard-list fa-2x"></i>
                    </div>
                    <h5 class="card-title">Total Requests</h5>
                    <h3 class="text-primary mb-0">@Model.Count()</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-warning mb-2">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                    <h5 class="card-title">Pending</h5>
                    <h3 class="text-warning mb-0">@Model.Count(l => l.Status == "Pending")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-success mb-2">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                    <h5 class="card-title">Approved</h5>
                    <h3 class="text-success mb-0">@Model.Count(l => l.Status == "Approved")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-danger mb-2">
                        <i class="fas fa-times-circle fa-2x"></i>
                    </div>
                    <h5 class="card-title">Rejected</h5>
                    <h3 class="text-danger mb-0">@Model.Count(l => l.Status == "Rejected")</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Requests Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>All Locker Requests
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Request ID</th>
                                <th>Name</th>
                                <th>ID Number</th>
                                <th>Locker Number</th>
                                <th>Semester</th>
                                <th>Status</th>
                                <th>Date Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-medium">#@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.IdNumber</td>
                                    <td class="fw-bold">@item.LockerNumber</td>
                                    <td>@item.Semester</td>
                                    <td>
                                        @if (item.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-clock me-1"></i>Pending
                                            </span>
                                        }
                                        else if (item.Status == "Approved")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>Approved
                                            </span>
                                        }
                                        else if (item.Status == "Rejected")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times me-1"></i>Rejected
                                            </span>
                                        }
                                    </td>
                                    <td>@item.DateCreated.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" 
                                               class="btn btn-outline-info btn-sm" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (item.Status == "Pending")
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.Id" 
                                                   class="btn btn-outline-primary btn-sm" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Review" asp-route-id="@item.Id" 
                                                   class="btn btn-outline-success btn-sm" title="Review">
                                                    <i class="fas fa-clipboard-check"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" 
                                                   class="btn btn-outline-danger btn-sm" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-key fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No locker requests found</h5>
                    <p class="text-muted">Get started by creating a new locker request.</p>
                    <a asp-action="Create" class="btn btn-primary rounded-pill px-4">
                        <i class="fas fa-plus me-2"></i>Create New Request
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/LockerRequest/index.js"></script>
}
