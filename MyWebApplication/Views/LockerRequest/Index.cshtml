@model IEnumerable<MyWebApplication.Models.LockerRequest>

@{
    ViewData["Title"] = "Locker Requests - Excellence Academy";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Shared/management-page.css" asp-append-version="true" />
}

<!-- Header Section - Mac Style -->
<section class="management-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8 mb-3 mb-md-0">
                <h1 class="mb-2">
                    <i class="fas fa-key me-3 header-icon"></i>Locker Requests
                </h1>
                <p class="lead mb-0">Manage student locker requests and assignments</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Create" class="btn btn-primary-action">
                    <i class="fas fa-plus me-2"></i>New Request
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<div class="container py-5">
    <!-- Statistics Cards - Mac Style -->
    <div class="row mb-5">
        <div class="col-md-3 col-6 mb-3 mb-md-0">
            <div class="stat-card cyan fade-in-up" style="animation-delay: 0.1s">
                <div class="stat-icon"><i class="fas fa-clipboard-list"></i></div>
                <h4 class="stat-number">@Model.Count()</h4>
                <p class="stat-label">Total Requests</p>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3 mb-md-0">
            <div class="stat-card amber fade-in-up" style="animation-delay: 0.2s">
                <div class="stat-icon"><i class="fas fa-clock"></i></div>
                <h4 class="stat-number">@Model.Count(l => l.Status == "Pending")</h4>
                <p class="stat-label">Pending</p>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3 mb-md-0">
            <div class="stat-card green fade-in-up" style="animation-delay: 0.3s">
                <div class="stat-icon"><i class="fas fa-check-circle"></i></div>
                <h4 class="stat-number">@Model.Count(l => l.Status == "Approved")</h4>
                <p class="stat-label">Approved</p>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3 mb-md-0">
            <div class="stat-card red fade-in-up" style="animation-delay: 0.4s">
                <div class="stat-icon"><i class="fas fa-times-circle"></i></div>
                <h4 class="stat-number">@Model.Count(l => l.Status == "Rejected")</h4>
                <p class="stat-label">Rejected</p>
            </div>
        </div>
    </div>

    <!-- Search and Filter Section - Mac Style -->
    <div class="search-filter-card fade-in-up" style="animation-delay: 0.5s">
        <div class="row align-items-center g-3">
            <div class="col-md-4">
                <div class="input-group search-input-group">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                    <input type="text" class="form-control" placeholder="Search locker requests..." id="searchInput">
                </div>
            </div>
            <div class="col-md-3">
                <select class="form-select filter-select" id="statusFilter">
                    <option value="">All Status</option>
                    <option value="Pending">Pending</option>
                    <option value="Approved">Approved</option>
                    <option value="Rejected">Rejected</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select filter-select" id="semesterFilter">
                    <option value="">All Semesters</option>
                    @if (Model != null)
                    {
                        @foreach (var semester in Model.Select(l => l.Semester).Distinct().Where(s => !string.IsNullOrEmpty(s)))
                        {
                            <option value="@semester">@semester</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button class="btn btn-export w-100" onclick="exportToCSV()">
                    <i class="fas fa-download me-2"></i>Export
                </button>
            </div>
        </div>
    </div>

    <!-- Requests Table - Mac Style -->
    <div class="table-card fade-in-up" style="animation-delay: 0.6s">
        <div class="table-card-header">
            <h5><i class="fas fa-list me-2"></i>All Locker Requests</h5>
        </div>
        <div class="p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table management-table mb-0">
                        <thead>
                            <tr>
                                <th>Request ID</th>
                                <th>Name</th>
                                <th>ID Number</th>
                                <th>Locker Number</th>
                                <th>Semester</th>
                                <th>Status</th>
                                <th>Date Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><span class="badge-id">#@item.Id</span></td>
                                    <td>@item.Name</td>
                                    <td>@item.IdNumber</td>
                                    <td class="fw-bold">@item.LockerNumber</td>
                                    <td>@item.Semester</td>
                                    <td>
                                        @if (item.Status == "Pending")
                                        {
                                            <span class="badge-status pending">Pending</span>
                                        }
                                        else if (item.Status == "Approved")
                                        {
                                            <span class="badge-status approved">Approved</span>
                                        }
                                        else if (item.Status == "Rejected")
                                        {
                                            <span class="badge-status rejected">Rejected</span>
                                        }
                                    </td>
                                    <td>@item.DateCreated.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="action-btn-group">
                                            <a asp-action="Details" asp-route-id="@item.Id" 
                                               class="action-btn view" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (item.Status == "Pending")
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.Id" 
                                                   class="action-btn edit" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" 
                                                   class="action-btn delete" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-key fa-4x empty-state-icon"></i>
                    <h4>No locker requests found</h4>
                    <p>Get started by creating a new locker request.</p>
                    <a asp-action="Create" class="btn btn-primary-action">
                        <i class="fas fa-plus me-2"></i>Create New Request
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/LockerRequest/index.js"></script>
}
