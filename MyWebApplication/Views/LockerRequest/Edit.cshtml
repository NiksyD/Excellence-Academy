@model MyWebApplication.Models.LockerRequest

@{
    ViewData["Title"] = "Edit Locker Request - Excellence Academy";
}

<!-- Header Section -->
<section class="bg-primary text-white py-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold mb-2">
                    <i class="fas fa-edit me-3"></i>Edit Locker Request
                </h1>
                <p class="lead mb-0">Update locker request for @Model.Name</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Index" class="btn btn-light btn-lg rounded-pill px-4">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-light py-4">
                    <h4 class="mb-0 text-center">
                        <i class="fas fa-key text-primary me-2"></i>
                        Edit Locker Request #@Model.Id
                        <span class="ms-3">
                            @if (Model.Status == "Pending")
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                            else if (Model.Status == "Approved")
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else if (Model.Status == "Rejected")
                            {
                                <span class="badge bg-danger">Rejected</span>
                            }
                        </span>
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data" id="editLockerRequestForm">
                        <div class="row g-4">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="DateCreated" />
                            <input type="hidden" asp-for="Status" />
                            <input type="hidden" asp-for="ApprovedBy" />
                            <input type="hidden" asp-for="ApprovalDate" />
                            
                            <!-- Personal Information Section -->
                            <div class="col-12">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-user me-2"></i>Personal Information
                                </h5>
                                <hr class="mb-4">
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Name" class="form-control" placeholder="Full Name" />
                                    <label asp-for="Name" class="form-label">
                                        <i class="fas fa-user me-2"></i>Full Name
                                    </label>
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="IdNumber" class="form-control" placeholder="ID Number" />
                                    <label asp-for="IdNumber" class="form-label">
                                        <i class="fas fa-id-card me-2"></i>ID Number
                                    </label>
                                    <span asp-validation-for="IdNumber" class="text-danger small"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="ContactNumber" class="form-control" placeholder="Contact Number" />
                                    <label asp-for="ContactNumber" class="form-label">
                                        <i class="fas fa-phone me-2"></i>Contact Number
                                    </label>
                                    <span asp-validation-for="ContactNumber" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Locker Information Section -->
                            <div class="col-12 mt-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-key me-2"></i>Locker Information
                                </h5>
                                <hr class="mb-4">
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="LockerNumber" class="form-control" placeholder="Locker Number" />
                                    <label asp-for="LockerNumber" class="form-label">
                                        <i class="fas fa-hashtag me-2"></i>Locker Number
                                    </label>
                                    <span asp-validation-for="LockerNumber" class="text-danger small"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="Semester" class="form-select">
                                        <option value="">Select Semester</option>
                                        <option value="First Semester">First Semester</option>
                                        <option value="Second Semester">Second Semester</option>
                                        <option value="Summer">Summer</option>
                                        <option value="Whole Year">Whole Year</option>
                                    </select>
                                    <label asp-for="Semester" class="form-label">
                                        <i class="fas fa-calendar me-2"></i>Semester
                                    </label>
                                    <span asp-validation-for="Semester" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Documents Section -->
                            <div class="col-12 mt-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-file-alt me-2"></i>Required Documents
                                </h5>
                                <hr class="mb-4">
                            </div>
            
                            <div class="col-md-12">
                                <label class="form-label fw-medium mb-3">
                                    <i class="fas fa-file-alt me-2"></i>Attached Study Load and Registration
                                </label>
                
                                <!-- Enhanced File Upload Area -->
                                <div id="fileUploadArea" class="file-upload-zone border border-2 border-dashed rounded-3 p-5 text-center mb-4 position-relative" style="border-color: #dee2e6; background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%); transition: all 0.3s ease; min-height: 200px;">
                                    <div class="upload-content">
                                        <div class="upload-icon mb-3">
                                            <i class="fas fa-cloud-upload-alt fa-4x text-primary opacity-75"></i>
                                        </div>
                                        <h4 class="fw-bold text-dark mb-2">Drag & Drop Files Here</h4>
                                        <p class="text-muted mb-3">or click to browse and select multiple files</p>
                        
                                        <!-- Hidden File Input -->
                                        <input type="file" id="fileInput" name="files" multiple accept=".pdf,.doc,.docx,.jpg,.jpeg,.png" style="display: none;">
                        
                                        <!-- Browse Button -->
                                        <button type="button" class="btn btn-primary btn-lg rounded-pill px-4 py-2 mb-3" onclick="document.getElementById('fileInput').click()">
                                            <i class="fas fa-folder-open me-2"></i>Browse Files
                                        </button>
                        
                                        <!-- File Format Info -->
                                        <div class="file-format-info mt-3">
                                            <div class="row justify-content-center">
                                                <div class="col-auto">
                                                    <div class="d-flex align-items-center gap-3 flex-wrap justify-content-center">
                                                        <span class="badge bg-danger-subtle text-danger px-3 py-2">
                                                            <i class="fas fa-file-pdf me-1"></i>PDF
                                                        </span>
                                                        <span class="badge bg-primary-subtle text-primary px-3 py-2">
                                                            <i class="fas fa-file-word me-1"></i>DOC/DOCX
                                                        </span>
                                                        <span class="badge bg-success-subtle text-success px-3 py-2">
                                                            <i class="fas fa-file-image me-1"></i>JPG/PNG
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <small class="text-muted d-block mt-2">
                                                <i class="fas fa-info-circle me-1"></i>Maximum file size: 5MB per file
                                            </small>
                                        </div>
                                    </div>
                    
                                    <!-- Upload Progress Overlay -->
                                    <div id="uploadProgress" class="position-absolute top-0 start-0 w-100 h-100 d-none upload-progress d-flex align-items-center justify-content-center" style="background: rgba(255, 255, 255, 0.9);">
                                        <div class="text-center">
                                            <div class="spinner-border text-primary mb-3" role="status">
                                                <span class="visually-hidden">Uploading...</span>
                                            </div>
                                            <p class="text-primary fw-medium">Processing files...</p>
                                        </div>
                                    </div>
                                </div>
                
                                <!-- File List Container -->
                                <div id="fileListContainer" class="file-list-container d-none">
                                    <div class="card shadow-sm">
                                        <div class="card-header text-white d-flex justify-content-between align-items-center">
                                            <h6 class="mb-0">
                                                <i class="fas fa-files me-2"></i>Selected Files
                                            </h6>
                                            <span id="fileCount" class="badge bg-light text-primary">0</span>
                                        </div>
                                        <div class="card-body p-0">
                                            <ul id="fileList" class="list-group list-group-flush">
                                                <!-- Files will be added here dynamically -->
                                            </ul>
                                        </div>
                                    </div>
                                </div>

                                <!-- Existing Files Display -->
                @if (Model.Documents != null && Model.Documents.Any())
                {
                    <div class="existing-files-container mt-4">
                        <div class="card shadow-sm">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">
                                    <i class="fas fa-paperclip me-2"></i>Existing Documents
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    @foreach (var document in Model.Documents)
                                    {
                                        <div class="col-md-6" id="document-@document.Id">
                                            <div class="border rounded p-3 h-100">
                                                <div class="d-flex align-items-center mb-2">
                                                    @if (document.ContentType.Contains("pdf"))
                                                    {
                                                        <i class="fas fa-file-pdf fa-2x text-danger me-3"></i>
                                                    }
                                                    else if (document.ContentType.Contains("word") || document.ContentType.Contains("document"))
                                                    {
                                                        <i class="fas fa-file-word fa-2x text-primary me-3"></i>
                                                    }
                                                    else if (document.ContentType.Contains("image"))
                                                    {
                                                        <i class="fas fa-file-image fa-2x text-success me-3"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="fas fa-file fa-2x text-muted me-3"></i>
                                                    }
                                                    <div class="flex-grow-1">
                                                        <h6 class="mb-1">@document.FileName</h6>
                                                        <small class="text-muted">
                                                            @(Math.Round((double)document.FileSize / 1024 / 1024, 2)) MB â€¢ 
                                                            Uploaded @document.UploadedAt.ToString("MMM dd, yyyy")
                                                        </small>
                                                    </div>
                                                </div>
                                                <div class="d-flex gap-2">
                                                    <a href="/uploads/lockerrequests/@document.StoredFileName" 
                                                       target="_blank" 
                                                       class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-eye me-1"></i>View
                                                    </a>
                                                    <a href="/uploads/lockerrequests/@document.StoredFileName" 
                                                       download="@document.FileName" 
                                                       class="btn btn-outline-success btn-sm">
                                                        <i class="fas fa-download me-1"></i>Download
                                                    </a>
                                                    @if (Model.Status == "Pending")
                                                    {
                                                        <button type="button" 
                                                                class="btn btn-outline-danger btn-sm" 
                                                                onclick="deleteDocument(@document.Id)">
                                                            <i class="fas fa-trash me-1"></i>Delete
                                                        </button>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
                            </div>

                            <!-- Terms and Conditions -->
                            <div class="col-12 mt-4">
                                <div class="form-check">
                                    <input asp-for="TermsAccepted" class="form-check-input" type="checkbox" />
                                    <label asp-for="TermsAccepted" class="form-check-label">
                                        I accept the Terms of Service and understand the locker usage policies
                                    </label>
                                    <span asp-validation-for="TermsAccepted" class="text-danger small d-block"></span>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="col-12 mt-4">
                                <div class="d-flex justify-content-between align-items-center">
                                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill px-4">
                                        <i class="fas fa-times me-2"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5">
                                        <i class="fas fa-save me-2"></i>Update Request
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" href="~/css/LockerRequest/create.css" />
    <script src="~/js/LockerRequest/edit.js"></script>
}
