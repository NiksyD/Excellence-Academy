@model MyWebApplication.Models.LockerRequest

@{
    ViewData["Title"] = "New Locker Request - Excellence Academy";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Shared/form-page.css" asp-append-version="true" />
}

<!-- Header Section - Mac Style -->
<section class="form-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-2">
                    <i class="fas fa-key me-3 header-icon"></i>New Locker Request
                </h1>
                <p class="lead mb-0">Submit your locker assignment request</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Index" class="btn-cancel-mac">
                    <i class="fas fa-arrow-left"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-card fade-in-up" style="animation-delay: 0.1s">
                <div class="form-card-header">
                    <h5>
                        <i class="fas fa-key"></i>
                        Locker Request Form
                    </h5>
                </div>
                <div class="form-card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data" id="createLockerRequestForm">
                        <div class="row g-4">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            
                            <!-- Personal Information Section -->
                            <div class="col-12">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-user me-2"></i>Personal Information
                                </h5>
                                <hr class="mb-4">
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="Name" class="form-label-mac">
                                        <i class="fas fa-user"></i>Full Name<span class="required">*</span>
                                    </label>
                                    <input asp-for="Name" class="form-control-mac" placeholder="Enter full name" />
                                    <span asp-validation-for="Name" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="IdNumber" class="form-label-mac">
                                        <i class="fas fa-id-card"></i>ID Number<span class="required">*</span>
                                    </label>
                                    <input asp-for="IdNumber" class="form-control-mac" placeholder="Enter ID number" />
                                    <span asp-validation-for="IdNumber" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="ContactNumber" class="form-label-mac">
                                        <i class="fas fa-phone"></i>Contact Number<span class="required">*</span>
                                    </label>
                                    <input asp-for="ContactNumber" class="form-control-mac" placeholder="Enter contact number" />
                                    <span asp-validation-for="ContactNumber" class="invalid-feedback-mac"></span>
                                </div>
                            </div>

                            <!-- Locker Information Section -->
                            <div class="col-12 mt-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-key me-2"></i>Locker Information
                                </h5>
                                <hr class="mb-4">
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="LockerNumber" class="form-label-mac">
                                        <i class="fas fa-hashtag"></i>Locker Number<span class="required">*</span>
                                    </label>
                                    <input asp-for="LockerNumber" class="form-control-mac" placeholder="Enter locker number" />
                                    <span asp-validation-for="LockerNumber" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="Semester" class="form-label-mac">
                                        <i class="fas fa-calendar"></i>Semester<span class="required">*</span>
                                    </label>
                                    <select asp-for="Semester" class="form-select-mac">
                                        <option value="">Select Semester</option>
                                        <option value="First Semester">First Semester</option>
                                        <option value="Second Semester">Second Semester</option>
                                        <option value="Summer">Summer</option>
                                        <option value="Whole Year">Whole Year</option>
                                    </select>
                                    <span asp-validation-for="Semester" class="invalid-feedback-mac"></span>
                                </div>
                            </div>

                            <!-- Documents Section -->
                            <div class="col-12 mt-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-file-alt me-2"></i>Required Documents
                                </h5>
                                <hr class="mb-4">
                            </div>
            
                            <div class="col-md-12">
                                <label class="form-label fw-medium mb-3">
                                    <i class="fas fa-file-alt me-2"></i>Attached Study Load and Registration
                                </label>
                
                                <!-- Enhanced File Upload Area - Mac Style -->
                                <div id="fileUploadArea" class="file-upload-zone-mac border border-2 border-dashed rounded-3 p-5 text-center mb-4 position-relative" style="border-color: rgba(37, 99, 235, 0.3); background: linear-gradient(145deg, rgba(248, 250, 252, 0.8) 0%, rgba(255, 255, 255, 0.6) 100%); transition: all 0.3s ease; min-height: 200px;">
                                    <div class="upload-content">
                                        <div class="upload-icon mb-3">
                                            <i class="fas fa-cloud-upload-alt fa-4x" style="color: #2563eb; opacity: 0.7;"></i>
                                        </div>
                                        <h4 class="fw-bold mb-2" style="color: #1e293b;">Drag & Drop Files Here</h4>
                                        <p class="text-muted mb-3" style="color: #64748b;">or click to browse and select multiple files</p>
                        
                                        <!-- Hidden File Input -->
                                        <input type="file" id="fileInput" name="files" multiple accept=".pdf,.doc,.docx,.jpg,.jpeg,.png" style="display: none;">
                        
                                        <!-- Browse Button -->
                                        <button type="button" class="btn-submit-mac mb-3" onclick="document.getElementById('fileInput').click()" style="padding: 0.75rem 2rem;">
                                            <i class="fas fa-folder-open"></i>Browse Files
                                        </button>
                        
                                        <!-- File Format Info -->
                                        <div class="file-format-info mt-3">
                                            <div class="row justify-content-center">
                                                <div class="col-auto">
                                                    <div class="d-flex align-items-center gap-3 flex-wrap justify-content-center">
                                                        <span class="badge-status" style="background: linear-gradient(145deg, rgba(220, 38, 38, 0.15) 0%, rgba(220, 38, 38, 0.1) 100%); color: #dc2626; border: 1px solid rgba(220, 38, 38, 0.2); padding: 0.5rem 1rem;">
                                                            <i class="fas fa-file-pdf me-1"></i>PDF
                                                        </span>
                                                        <span class="badge-status" style="background: linear-gradient(145deg, rgba(37, 99, 235, 0.15) 0%, rgba(37, 99, 235, 0.1) 100%); color: #2563eb; border: 1px solid rgba(37, 99, 235, 0.2); padding: 0.5rem 1rem;">
                                                            <i class="fas fa-file-word me-1"></i>DOC/DOCX
                                                        </span>
                                                        <span class="badge-status" style="background: linear-gradient(145deg, rgba(5, 150, 105, 0.15) 0%, rgba(5, 150, 105, 0.1) 100%); color: #059669; border: 1px solid rgba(5, 150, 105, 0.2); padding: 0.5rem 1rem;">
                                                            <i class="fas fa-file-image me-1"></i>JPG/PNG
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <small class="text-muted d-block mt-2">
                                                <i class="fas fa-info-circle me-1"></i>Maximum file size: 5MB per file
                                            </small>
                                        </div>
                                    </div>
                    
                                    <!-- Upload Progress Overlay -->
                                    <div id="uploadProgress" class="position-absolute top-0 start-0 w-100 h-100 d-none upload-progress d-flex align-items-center justify-content-center" style="background: rgba(255, 255, 255, 0.9);">
                                        <div class="text-center">
                                            <div class="spinner-border text-primary mb-3" role="status">
                                                <span class="visually-hidden">Uploading...</span>
                                            </div>
                                            <p class="text-primary fw-medium">Processing files...</p>
                                        </div>
                                    </div>
                                </div>
                
                                <!-- File List Container -->
                                <div id="fileList" class="file-list-container" style="display: none;">
                                    <div class="form-card" style="margin-top: 1.5rem;">
                                        <div class="form-card-header" style="background: linear-gradient(145deg, rgba(37, 99, 235, 0.1) 0%, rgba(37, 99, 235, 0.05) 100%);">
                                            <h5 style="color: #2563eb; font-size: 1rem;">
                                                <i class="fas fa-paperclip"></i>Selected Files
                                                <span id="fileCount" class="badge-id" style="margin-left: 0.75rem; background: white; color: #2563eb; border: 1px solid rgba(37, 99, 235, 0.3);">0</span>
                                            </h5>
                                        </div>
                                        <div class="form-card-body" style="padding: 1rem;">
                                            <div id="fileItems" class="list-group list-group-flush"></div>
                                        </div>
                                    </div>
                                </div>

                            <!-- Terms and Conditions -->
                            <div class="col-12 mt-4">
                                <div class="form-check">
                                    <input asp-for="TermsAccepted" class="form-check-input" type="checkbox" />
                                    <label asp-for="TermsAccepted" class="form-check-label">
                                        I accept the Terms of Service and understand the locker usage policies
                                    </label>
                                    <span asp-validation-for="TermsAccepted" class="text-danger small d-block"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <a asp-action="Index" class="btn-cancel-mac">
                                <i class="fas fa-times"></i>Cancel
                            </a>
                            <button type="submit" class="btn-submit-mac">
                                <i class="fas fa-paper-plane"></i>Submit Request
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" href="~/css/LockerRequest/create.css" />
    <script src="~/js/LockerRequest/create.js"></script>
}
