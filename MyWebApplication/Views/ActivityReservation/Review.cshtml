@model MyWebApplication.Models.ActivityReservation
@{
    ViewData["Title"] = "Review Activity Reservation - Excellence Academy";
}

<!-- Header Section -->
<section class="bg-success text-white py-4" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-6 fw-bold mb-2">
                    <i class="fas fa-check-circle me-3"></i>Review Activity Reservation
                </h1>
                <p class="lead mb-0">Review and approve activity reservation application</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Index" class="btn btn-light btn-lg rounded-pill px-4">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Reservation Summary Card -->
            <div class="card shadow-lg mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-file-alt me-2 text-primary"></i>
                        Activity Reservation #@Model.Id
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Organization Information -->
                        <div class="col-md-6">
                            <h6 class="text-primary mb-3">
                                <i class="fas fa-building me-2"></i>Organization Information
                            </h6>
                            <div class="mb-3">
                                <label class="form-label fw-medium">Organization Name</label>
                                <p class="mb-1">@Model.OrganizationName</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-medium">Form Date</label>
                                <p class="mb-1">@Model.FormDate.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                        
                        <!-- Activity Information -->
                        <div class="col-md-6">
                            <h6 class="text-primary mb-3">
                                <i class="fas fa-star me-2"></i>Activity Information
                            </h6>
                            <div class="mb-3">
                                <label class="form-label fw-medium">Activity Title</label>
                                <p class="mb-1 fw-bold">@Model.ActivityTitle</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-medium">Nature of Activity</label>
                                <p class="mb-1">@Model.NatureOfActivity</p>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-medium">Venue</label>
                                <p class="mb-1">@Model.Venue</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-medium">Date Needed</label>
                                <p class="mb-1">@Model.DateNeeded.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-medium">Time</label>
                                <p class="mb-1">@Model.TimeFrom.ToString(@"hh\:mm") - @Model.TimeTo.ToString(@"hh\:mm")</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        @if (!string.IsNullOrEmpty(Model.Speaker))
                        {
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-medium">Speaker</label>
                                    <p class="mb-1">@Model.Speaker</p>
                                </div>
                            </div>
                        }
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-medium">Source of Funds</label>
                                <p class="mb-1">@Model.SourceOfFunds</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-medium">Participants</label>
                                <p class="mb-1">@Model.Participants</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-medium">Purpose/Objective</label>
                                <p class="mb-1">@Model.PurposeObjective</p>
                            </div>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.EquipmentFacilitiesNeeded))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-medium">Equipment & Facilities Needed</label>
                            <p class="mb-1">@Model.EquipmentFacilitiesNeeded</p>
                        </div>
                    }
                    
                </div>
            </div>

            <!-- Approval Form -->
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-clipboard-check me-2"></i>
                        Approval Decision
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Review" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="OrganizationName" />
                        <input type="hidden" asp-for="FormDate" />
                        <input type="hidden" asp-for="ActivityTitle" />
                        <input type="hidden" asp-for="Venue" />
                        <input type="hidden" asp-for="DateNeeded" />
                        <input type="hidden" asp-for="TimeFrom" />
                        <input type="hidden" asp-for="TimeTo" />
                        <input type="hidden" asp-for="Participants" />
                        <input type="hidden" asp-for="Speaker" />
                        <input type="hidden" asp-for="PurposeObjective" />
                        <input type="hidden" asp-for="EquipmentFacilitiesNeeded" />
                        <input type="hidden" asp-for="NatureOfActivity" />
                        <input type="hidden" asp-for="SourceOfFunds" />
                        <input type="hidden" asp-for="DateCreated" />
                        <input type="hidden" asp-for="Status" />

                        <!-- Supporting Documents Section -->
                        @if (Model.Documents != null && Model.Documents.Any())
                        {
                            <div class="mb-4">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-file-alt me-2"></i>Supporting Documents (@Model.Documents.Count())
                                </h6>
                                <div class="card">
                                    <div class="card-body p-0">
                                        <div class="list-group list-group-flush">
                                            @foreach (var document in Model.Documents)
                                            {
                                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                                    <div class="d-flex align-items-center">
                                                        <i class="fas fa-file-@(document.ContentType.Contains("pdf") ? "pdf" : document.ContentType.Contains("image") ? "image" : "alt") text-primary me-3"></i>
                                                        <div>
                                                            <div class="fw-medium">@document.FileName</div>
                                                            <small class="text-muted">
                                                                @((document.FileSize / 1024.0).ToString("F1")) KB â€¢ 
                                                                Uploaded: @document.UploadedAt.ToString("MMM dd, yyyy")
                                                            </small>
                                                        </div>
                                                    </div>
                                                    <a href="@Url.Content($"~/{document.FilePath}")" target="_blank" class="btn btn-outline-primary btn-sm rounded-pill">
                                                        <i class="fas fa-download me-1"></i>View
                                                    </a>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="mb-4">
                            <label asp-for="Remarks" class="form-label fw-medium">
                                <i class="fas fa-comment me-2"></i>Approval Remarks
                            </label>
                            <textarea asp-for="Remarks" class="form-control" rows="4" 
                                      placeholder="Enter approval remarks or additional conditions..."></textarea>
                            <span asp-validation-for="Remarks" class="text-danger"></span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center">
                                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill px-4">
                                        <i class="fas fa-times me-2"></i>Cancel
                                    </a>
                                    <div class="d-flex gap-3">
                                        <button type="button" class="btn btn-danger btn-lg rounded-pill px-4"
                                                data-bs-toggle="modal" data-bs-target="#rejectModal">
                                            <i class="fas fa-times-circle me-2"></i>Reject Reservation
                                        </button>
                                        <button type="button" class="btn btn-success btn-lg rounded-pill px-5"
                                                data-bs-toggle="modal" data-bs-target="#approveModal">
                                            <i class="fas fa-check-circle me-2"></i>Approve Reservation
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Guidelines Card -->
            <div class="card mt-4 border-0 bg-light">
                <div class="card-body">
                    <h6 class="text-primary mb-3">
                        <i class="fas fa-info-circle me-2"></i>Approval Guidelines
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Verify venue availability</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Check equipment requirements</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Confirm activity objectives</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Review funding source</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Approve Confirmation Modal -->
<div class="modal fade" id="approveModal" tabindex="-1" aria-labelledby="approveModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="approveModalLabel">
                    <i class="fas fa-check-circle me-2"></i>Approve Activity Reservation
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <i class="fas fa-check-circle text-success" style="font-size: 3rem;"></i>
                </div>
                <p class="text-center mb-3">Are you sure you want to <strong>approve</strong> this activity reservation?</p>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Reservation #@Model.Id</strong> for <strong>@Model.ActivityTitle</strong> will be approved and the organization will be notified.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-success" onclick="submitApproval('approve')">
                    <i class="fas fa-check-circle me-2"></i>Confirm Approval
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Reject Confirmation Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="rejectModalLabel">
                    <i class="fas fa-times-circle me-2"></i>Reject Activity Reservation
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <i class="fas fa-times-circle text-danger" style="font-size: 3rem;"></i>
                </div>
                <p class="text-center mb-3">Are you sure you want to <strong>reject</strong> this activity reservation?</p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Reservation #@Model.Id</strong> for <strong>@Model.ActivityTitle</strong> will be rejected. Please ensure you have provided a clear reason in the remarks field.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-danger" onclick="submitApproval('reject')">
                    <i class="fas fa-times-circle me-2"></i>Confirm Rejection
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/ActivityReservation/review.js"></script>
}
