@model MyWebApplication.Models.ActivityReservation

@{
    ViewData["Title"] = "Create Activity Reservation - Excellence Academy";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Shared/form-page.css" asp-append-version="true" />
}

<!-- Header Section - Mac Style -->
<section class="form-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-2">
                    <i class="fas fa-calendar-plus me-3 header-icon"></i>Create Activity Reservation
                </h1>
                <p class="lead mb-0">Submit a new activity area reservation form</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Index" class="btn-cancel-mac">
                    <i class="fas fa-arrow-left"></i>Back to Reservations
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="form-card fade-in-up" style="animation-delay: 0.1s">
                <div class="form-card-header">
                    <h5>
                        <i class="fas fa-clipboard-list"></i>
                        Activity Area Reservation Form
                    </h5>
                </div>
                <div class="form-card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data" id="activityReservationForm">
                        <div class="row g-4">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            
                            <!-- Organization Information Section -->
                            <div class="col-12">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-building me-2"></i>Organization Information
                                </h5>
                                <hr class="mb-4">
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="OrganizationName" class="form-label-mac">
                                        <i class="fas fa-building"></i>Name of Organization<span class="required">*</span>
                                    </label>
                                    <input asp-for="OrganizationName" class="form-control-mac" placeholder="Enter organization name" />
                                    <span asp-validation-for="OrganizationName" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="FormDate" class="form-label-mac">
                                        <i class="fas fa-calendar"></i>Form Date<span class="required">*</span>
                                    </label>
                                    <input asp-for="FormDate" class="form-control-mac" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                    <span asp-validation-for="FormDate" class="invalid-feedback-mac"></span>
                                </div>
                            </div>

                            <!-- Activity Information Section -->
                            <div class="col-12 mt-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-tasks me-2"></i>Activity Information
                                </h5>
                                <hr class="mb-4">
                            </div>
                            
                            <div class="col-md-12">
                                <div class="form-group-mac">
                                    <label asp-for="ActivityTitle" class="form-label-mac">
                                        <i class="fas fa-star"></i>Activity Title<span class="required">*</span>
                                    </label>
                                    <input asp-for="ActivityTitle" class="form-control-mac" placeholder="Enter activity title" />
                                    <span asp-validation-for="ActivityTitle" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="Venue" class="form-label-mac">
                                        <i class="fas fa-map-marker-alt"></i>Venue<span class="required">*</span>
                                    </label>
                                    <input asp-for="Venue" class="form-control-mac" placeholder="Enter venue" />
                                    <span asp-validation-for="Venue" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="DateNeeded" class="form-label-mac">
                                        <i class="fas fa-calendar-day"></i>Date Needed<span class="required">*</span>
                                    </label>
                                    <input asp-for="DateNeeded" class="form-control-mac" type="date" />
                                    <span asp-validation-for="DateNeeded" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="TimeFrom" class="form-label-mac">
                                        <i class="fas fa-clock"></i>Time From<span class="required">*</span>
                                    </label>
                                    <input asp-for="TimeFrom" class="form-control-mac" type="time" />
                                    <span asp-validation-for="TimeFrom" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="TimeTo" class="form-label-mac">
                                        <i class="fas fa-clock"></i>Time To<span class="required">*</span>
                                    </label>
                                    <input asp-for="TimeTo" class="form-control-mac" type="time" />
                                    <span asp-validation-for="TimeTo" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="Speaker" class="form-label-mac">
                                        <i class="fas fa-microphone"></i>Speaker
                                    </label>
                                    <input asp-for="Speaker" class="form-control-mac" placeholder="Enter speaker name (optional)" />
                                    <span asp-validation-for="Speaker" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="NatureOfActivity" class="form-label-mac">
                                        <i class="fas fa-tag"></i>Nature of Activity<span class="required">*</span>
                                    </label>
                                    <select asp-for="NatureOfActivity" class="form-select-mac">
                                        <option value="">Select Nature of Activity</option>
                                        <option value="Conference">Conference</option>
                                        <option value="Seminar">Seminar</option>
                                        <option value="Workshop">Workshop</option>
                                        <option value="Meeting">Meeting</option>
                                        <option value="Training">Training</option>
                                        <option value="Presentation">Presentation</option>
                                        <option value="Competition">Competition</option>
                                        <option value="Exhibition">Exhibition</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="NatureOfActivity" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <div class="form-group-mac">
                                    <label asp-for="Participants" class="form-label-mac">
                                        <i class="fas fa-users"></i>Participants<span class="required">*</span>
                                    </label>
                                    <textarea asp-for="Participants" class="form-control-mac form-textarea-mac" placeholder="Enter participants details" style="min-height: 100px;"></textarea>
                                    <span asp-validation-for="Participants" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <div class="form-group-mac">
                                    <label asp-for="PurposeObjective" class="form-label-mac">
                                        <i class="fas fa-bullseye"></i>Purpose/Objective<span class="required">*</span>
                                    </label>
                                    <textarea asp-for="PurposeObjective" class="form-control-mac form-textarea-mac" placeholder="Enter purpose/objective" style="min-height: 120px;"></textarea>
                                    <span asp-validation-for="PurposeObjective" class="invalid-feedback-mac"></span>
                                </div>
                            </div>

                            <!-- Resources Section -->
                            <div class="col-12 mt-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-tools me-2"></i>Resources & Funding
                                </h5>
                                <hr class="mb-4">
                            </div>
                            
                            <div class="col-md-12">
                                <div class="form-group-mac">
                                    <label asp-for="EquipmentFacilitiesNeeded" class="form-label-mac">
                                        <i class="fas fa-tools"></i>Equipment & Other Facilities Needed
                                    </label>
                                    <textarea asp-for="EquipmentFacilitiesNeeded" class="form-control-mac form-textarea-mac" placeholder="Enter equipment and facilities needed (optional)" style="min-height: 100px;"></textarea>
                                    <span asp-validation-for="EquipmentFacilitiesNeeded" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="SourceOfFunds" class="form-label-mac">
                                        <i class="fas fa-dollar-sign"></i>Source of Funds
                                    </label>
                                    <select asp-for="SourceOfFunds" class="form-select-mac">
                                        <option value="">Select Source of Funds</option>
                                        <option value="Department Budget">Department Budget</option>
                                        <option value="Organization Budget">Organization Budget</option>
                                        <option value="External Sponsor">External Sponsor</option>
                                        <option value="Student Fees">Student Fees</option>
                                        <option value="Grant">Grant</option>
                                        <option value="Self-Funded">Self-Funded</option>
                                        <option value="N/A">N/A</option>
                                    </select>
                                    <span asp-validation-for="SourceOfFunds" class="invalid-feedback-mac"></span>
                                </div>
                            </div>

                            <!-- Documents Section -->
                            <div class="col-12 mt-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-file-alt me-2"></i>Supporting Documents
                                </h5>
                                <hr class="mb-4">
                            </div>
                            
                            <div class="col-12">
                                <!-- Enhanced File Upload Area - Mac Style -->
                                <div id="fileUploadArea" class="file-upload-zone-mac border border-2 border-dashed rounded-3 p-5 text-center mb-4 position-relative" style="border-color: rgba(37, 99, 235, 0.3); background: linear-gradient(145deg, rgba(248, 250, 252, 0.8) 0%, rgba(255, 255, 255, 0.6) 100%); transition: all 0.3s ease; min-height: 200px;">
                                    <div class="upload-content">
                                        <div class="upload-icon mb-3">
                                            <i class="fas fa-cloud-upload-alt fa-4x" style="color: #2563eb; opacity: 0.7;"></i>
                                        </div>
                                        <h4 class="fw-bold mb-2" style="color: #1e293b;">Drag & Drop Files Here</h4>
                                        <p class="text-muted mb-3" style="color: #64748b;">or click to browse and select multiple files</p>
                                        
                                        <!-- Hidden File Input -->
                                        <input type="file" id="fileInput" name="files" multiple accept=".pdf,.doc,.docx,.jpg,.jpeg,.png" style="display: none;">
                                        
                                        <!-- Browse Button -->
                                        <button type="button" class="btn-submit-mac mb-3" onclick="document.getElementById('fileInput').click()" style="padding: 0.75rem 2rem;">
                                            <i class="fas fa-folder-open"></i>Browse Files
                                        </button>
                                        
                                        <!-- File Format Info -->
                                        <div class="file-format-info mt-3">
                                            <div class="row justify-content-center">
                                                <div class="col-auto">
                                                    <div class="d-flex align-items-center gap-3 flex-wrap justify-content-center">
                                                        <span class="badge-status" style="background: linear-gradient(145deg, rgba(220, 38, 38, 0.15) 0%, rgba(220, 38, 38, 0.1) 100%); color: #dc2626; border: 1px solid rgba(220, 38, 38, 0.2); padding: 0.5rem 1rem;">
                                                            <i class="fas fa-file-pdf me-1"></i>PDF
                                                        </span>
                                                        <span class="badge-status" style="background: linear-gradient(145deg, rgba(37, 99, 235, 0.15) 0%, rgba(37, 99, 235, 0.1) 100%); color: #2563eb; border: 1px solid rgba(37, 99, 235, 0.2); padding: 0.5rem 1rem;">
                                                            <i class="fas fa-file-word me-1"></i>DOC/DOCX
                                                        </span>
                                                        <span class="badge-status" style="background: linear-gradient(145deg, rgba(5, 150, 105, 0.15) 0%, rgba(5, 150, 105, 0.1) 100%); color: #059669; border: 1px solid rgba(5, 150, 105, 0.2); padding: 0.5rem 1rem;">
                                                            <i class="fas fa-file-image me-1"></i>JPG/PNG
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <small class="text-muted d-block mt-2">
                                                <i class="fas fa-info-circle me-1"></i>Maximum file size: 5MB per file
                                            </small>
                                        </div>
                                    </div>
                                    
                                    <!-- Upload Progress Overlay (hidden by default) -->
                                    <div id="uploadProgress" class="upload-progress position-absolute top-0 start-0 w-100 h-100 d-none align-items-center justify-content-center bg-white bg-opacity-90 rounded-3">
                                        <div class="text-center">
                                            <div class="spinner-border text-primary mb-3" role="status">
                                                <span class="visually-hidden">Uploading...</span>
                                            </div>
                                            <h5 class="text-primary">Processing Files...</h5>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- File List Container -->
                                <div id="fileList" class="file-list-container" style="display: none;">
                                    <div class="form-card" style="margin-top: 1.5rem;">
                                        <div class="form-card-header" style="background: linear-gradient(145deg, rgba(37, 99, 235, 0.1) 0%, rgba(37, 99, 235, 0.05) 100%);">
                                            <h5 style="color: #2563eb; font-size: 1rem;">
                                                <i class="fas fa-paperclip"></i>Selected Files
                                                <span id="fileCount" class="badge-id" style="margin-left: 0.75rem; background: white; color: #2563eb; border: 1px solid rgba(37, 99, 235, 0.3);">0</span>
                                            </h5>
                                        </div>
                                        <div class="form-card-body" style="padding: 1rem;">
                                            <div id="fileItems" class="list-group list-group-flush"></div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- File Upload Errors -->
                                <div id="fileErrors" class="mt-3"></div>
                            </div>
                            
                        </div>
                        
                        <!-- Form Actions -->
                        <div class="form-actions">
                            <a asp-action="Index" class="btn-cancel-mac">
                                <i class="fas fa-times"></i>Cancel
                            </a>
                            <button type="submit" class="btn-submit-mac">
                                <i class="fas fa-save"></i>Submit Reservation
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Help Section -->
            <div class="card mt-4 border-0 bg-light">
                <div class="card-body">
                    <h6 class="text-primary mb-3">
                        <i class="fas fa-info-circle me-2"></i>Reservation Guidelines
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>All required fields must be completed</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Provide clear activity objectives</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Specify equipment needs clearly</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Review information before submission</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/ActivityReservation/create.js"></script>
}
