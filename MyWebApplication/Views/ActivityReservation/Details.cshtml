@model MyWebApplication.Models.ActivityReservation

@{
    ViewData["Title"] = "Activity Reservation Details - Excellence Academy";
}

<!-- Header Section -->
<section class="bg-primary text-white py-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold mb-2">
                    <i class="fas fa-calendar-alt me-3"></i>Reservation Details
                </h1>
                <p class="lead mb-0">Reservation #@Model.Id - @Model.ActivityTitle</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Index" class="btn btn-light rounded-pill px-4">
                    <i class="fas fa-arrow-left me-2"></i>Back to Reservations
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<div class="container py-5">
    <div class="row">
        <!-- Left Column - Reservation Details -->
        <div class="col-lg-8">
            <!-- Status Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="mb-1">Reservation Status</h5>
                            <p class="text-muted mb-0">Current status of this activity reservation</p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            @if (Model.Status == "Pending")
                            {
                                <span class="badge bg-warning fs-6 px-3 py-2">
                                    <i class="fas fa-clock me-2"></i>Pending Review
                                </span>
                            }
                            else if (Model.Status == "Approved")
                            {
                                <span class="badge bg-success fs-6 px-3 py-2">
                                    <i class="fas fa-check-circle me-2"></i>Approved
                                </span>
                            }
                            else if (Model.Status == "Rejected")
                            {
                                <span class="badge bg-danger fs-6 px-3 py-2">
                                    <i class="fas fa-times-circle me-2"></i>Rejected
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Organization Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-building me-2"></i>Organization Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Organization Name</label>
                            <p class="mb-0">@Model.OrganizationName</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Form Date</label>
                            <p class="mb-0">@Model.FormDate.ToString("MMMM dd, yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Activity Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-star me-2"></i>Activity Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-12">
                            <label class="form-label fw-bold text-muted">Activity Title</label>
                            <p class="mb-0 fw-bold text-primary">@Model.ActivityTitle</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Venue</label>
                            <p class="mb-0">@Model.Venue</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Nature of Activity</label>
                            <p class="mb-0">@Model.NatureOfActivity</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Date Needed</label>
                            <p class="mb-0">@Model.DateNeeded.ToString("MMMM dd, yyyy")</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Time</label>
                            <p class="mb-0">@Model.TimeFrom.ToString(@"hh\:mm") - @Model.TimeTo.ToString(@"hh\:mm")</p>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Speaker))
                        {
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-muted">Speaker</label>
                                <p class="mb-0">@Model.Speaker</p>
                            </div>
                        }
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Source of Funds</label>
                            <p class="mb-0">@Model.SourceOfFunds</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Participants & Purpose -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-users me-2"></i>Participants & Purpose
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label fw-bold text-muted">Participants</label>
                            <p class="mb-0">@Model.Participants</p>
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold text-muted">Purpose/Objective</label>
                            <p class="mb-0">@Model.PurposeObjective</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Equipment & Documents -->
            @if (!string.IsNullOrEmpty(Model.EquipmentFacilitiesNeeded) || !string.IsNullOrEmpty(Model.AttachedDocuments) || !string.IsNullOrEmpty(Model.Remarks))
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="fas fa-tools me-2"></i>Additional Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @if (!string.IsNullOrEmpty(Model.EquipmentFacilitiesNeeded))
                            {
                                <div class="col-12">
                                    <label class="form-label fw-bold text-muted">Equipment & Facilities Needed</label>
                                    <p class="mb-0">@Model.EquipmentFacilitiesNeeded</p>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.AttachedDocuments))
                            {
                                <div class="col-12">
                                    <label class="form-label fw-bold text-muted">Attached Documents</label>
                                    <p class="mb-0">@Model.AttachedDocuments</p>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Remarks))
                            {
                                <div class="col-12">
                                    <label class="form-label fw-bold text-muted">Remarks</label>
                                    <p class="mb-0">@Model.Remarks</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Right Column - Actions & Timeline -->
        <div class="col-lg-4">
            <!-- Action Buttons -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-cogs me-2"></i>Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (Model.Status == "Pending")
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="fas fa-edit me-2"></i>Edit Reservation
                            </a>
                            <a asp-action="Review" asp-route-id="@Model.Id" class="btn btn-success">
                                <i class="fas fa-check me-2"></i>Review Reservation
                            </a>
                        }
                        else if (Model.Status == "Approved")
                        {
                            <button class="btn btn-outline-primary" onclick="window.print()">
                                <i class="fas fa-print me-2"></i>Print Reservation
                            </button>
                        }
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-2"></i>View All Reservations
                        </a>
                    </div>
                </div>
            </div>

            <!-- Reservation Timeline -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-history me-2"></i>Reservation Timeline
                    </h6>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Reservation Submitted</h6>
                                <p class="text-muted small mb-0">@Model.DateCreated.ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                            </div>
                        </div>
                        
                        @if (Model.Status == "Approved" && Model.ApprovalDate.HasValue)
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-success"></div>
                                <div class="timeline-content">
                                    <h6 class="mb-1">Reservation Approved</h6>
                                    <p class="text-muted small mb-1">@Model.ApprovalDate.Value.ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                                    @if (!string.IsNullOrEmpty(Model.ApprovedBy))
                                    {
                                        <p class="text-muted small mb-0">Approved by: @Model.ApprovedBy</p>
                                    }
                                </div>
                            </div>
                        }
                        else if (Model.Status == "Rejected" && Model.ApprovalDate.HasValue)
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-danger"></div>
                                <div class="timeline-content">
                                    <h6 class="mb-1">Reservation Rejected</h6>
                                    <p class="text-muted small mb-1">@Model.ApprovalDate.Value.ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                                    @if (!string.IsNullOrEmpty(Model.ApprovedBy))
                                    {
                                        <p class="text-muted small mb-0">Rejected by: @Model.ApprovedBy</p>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/ActivityReservation/details.css" />
}