@model IEnumerable<MyWebApplication.Models.Student>

@{
    ViewData["Title"] = "Student Management";
}

<div class="container-fluid p-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-5 gap-3">
        <div>
            <h1 class="display-6 fw-bold text-primary mb-2">Student Directory</h1>
            <p class="text-muted mb-0">Manage student academic records and enrollment.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-user-plus me-2"></i>New Student
        </a>
    </div>

    <!-- Stats Row -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="rounded-circle p-3 me-3" style="background-color: rgba(30, 41, 59, 0.1); color: var(--primary);">
                        <i class="fas fa-users fa-lg"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold mb-0">@(Model?.Count() ?? 0)</h3>
                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Total Students</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="rounded-circle p-3 me-3" style="background-color: rgba(212, 175, 55, 0.1); color: var(--accent);">
                        <i class="fas fa-graduation-cap fa-lg"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold mb-0">@(Model?.Where(s => !string.IsNullOrEmpty(s.Course)).Count() ?? 0)</h3>
                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Enrolled</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="rounded-circle p-3 me-3" style="background-color: rgba(25, 135, 84, 0.1); color: #198754;">
                        <i class="fas fa-book fa-lg"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold mb-0">@(Model?.Select(s => s.Course).Distinct().Count() ?? 0)</h3>
                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Programs</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="rounded-circle p-3 me-3" style="background-color: rgba(71, 85, 105, 0.1); color: #475569;">
                        <i class="fas fa-calendar fa-lg"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold mb-0">@DateTime.Now.Year</h3>
                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Academic Year</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3 border-0">
            <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">
                <h5 class="mb-0 fw-bold">Student Records</h5>
                <div class="input-group" style="width: 100%; max-width: 300px;">
                    <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                    <input type="text" class="form-control border-start-0 ps-0" placeholder="Search students...">
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive-xl">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 text-uppercase text-muted" style="font-size: 0.75rem; letter-spacing: 1px;">Full Name</th>
                            <th class="text-uppercase text-muted" style="font-size: 0.75rem; letter-spacing: 1px;">Program</th>
                            <th class="text-uppercase text-muted" style="font-size: 0.75rem; letter-spacing: 1px;">Contact</th>
                            <th class="text-uppercase text-muted" style="font-size: 0.75rem; letter-spacing: 1px;">Enrolled Date</th>
                            <th class="text-end pe-4 text-uppercase text-muted" style="font-size: 0.75rem; letter-spacing: 1px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-3 bg-light text-primary fw-bold d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; border-radius: 50%;">
                                            @(item.Firstname?.Substring(0, 1))@(item.Lastname?.Substring(0, 1))
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@item.Firstname @item.Lastname</div>
                                            <small class="text-muted">ID: @item.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Course)) {
                                        <span class="badge bg-light text-dark border">@item.Course</span>
                                    } else {
                                        <span class="text-muted small">Not Assigned</span>
                                    }
                                </td>
                                <td>
                                    <a href="mailto:@item.Email" class="text-decoration-none text-muted">
                                        <i class="fas fa-envelope me-1"></i> @item.Email
                                    </a>
                                </td>
                                <td class="text-muted">
                                    @item.DateCreated.ToString("MMM dd, yyyy")
                                </td>
                                <td class="text-end pe-4">
                                    <div class="dropdown">
                                        <button class="btn btn-light btn-sm rounded-circle" type="button" data-bs-toggle="dropdown">
                                            <i class="fas fa-ellipsis-v text-muted"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye me-2 text-primary"></i>View Profile</a></li>
                                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-user-edit me-2 text-muted"></i>Edit Details</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt me-2"></i>Remove</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
