@model MyWebApplication.Models.Student
@{
	ViewData["Title"] = "Delete Student - Excellence Academy";
}

<!-- Header Section -->
<section class="bg-danger text-white py-4" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-md-8">
				<h1 class="display-5 fw-bold mb-2">
					<i class="fas fa-user-times me-3"></i>Delete Student
				</h1>
				<p class="lead mb-0">Confirm deletion of @Model.Firstname @Model.Lastname</p>
			</div>
			<div class="col-md-4 text-md-end">
				<a asp-action="Index" class="btn btn-light rounded-pill px-4">
					<i class="fas fa-arrow-left me-2"></i>Back to Students
				</a>
			</div>
		</div>
	</div>
</section>

<!-- Main Content -->
<div class="container py-5">
	<div class="row justify-content-center">
		<div class="col-lg-8">
			<div class="card shadow-lg border-0">
				<div class="card-header bg-light py-4">
					<h4 class="mb-0 text-center text-danger">
						<i class="fas fa-exclamation-triangle text-danger me-2"></i>
						Confirm Student Deletion
					</h4>
				</div>
				<div class="card-body p-5">
					<!-- Warning Alert -->
					<div class="alert alert-danger d-flex align-items-center mb-4">
						<i class="fas fa-exclamation-triangle me-3 fs-4"></i>
						<div>
							<h6 class="alert-heading mb-1">Warning: This action cannot be undone!</h6>
							<p class="mb-0">You are about to permanently delete this student record from the system.</p>
						</div>
					</div>

					<!-- Student Information Display -->
					<div class="row g-4 mb-4">
						<!-- Student ID -->
						<div class="col-12">
							<div class="alert alert-info d-flex align-items-center">
								<i class="fas fa-info-circle me-2"></i>
								<span>Student ID: <strong>#@Model.Id</strong></span>
							</div>
						</div>
						
						<!-- Personal Information Section -->
						<div class="col-12">
							<h5 class="text-primary mb-3">
								<i class="fas fa-user me-2"></i>Personal Information
							</h5>
							<hr class="mb-4">
						</div>
						
						<div class="col-md-6">
							<div class="form-floating mb-3">
								<input value="@Model.Firstname" class="form-control" readonly />
								<label class="form-label">
									<i class="fas fa-user me-2"></i>First Name
								</label>
							</div>
						</div>
						
						<div class="col-md-6">
							<div class="form-floating mb-3">
								<input value="@Model.Lastname" class="form-control" readonly />
								<label class="form-label">
									<i class="fas fa-user me-2"></i>Last Name
								</label>
							</div>
						</div>
						
						<div class="col-md-6">
							<div class="form-floating mb-3">
								<input value="@Model.Email" class="form-control" readonly />
								<label class="form-label">
									<i class="fas fa-envelope me-2"></i>Email Address
								</label>
							</div>
						</div>
						
						<!-- Academic Information Section -->
						<div class="col-12">
							<h5 class="text-primary mb-3">
								<i class="fas fa-graduation-cap me-2"></i>Academic Information
							</h5>
							<hr class="mb-4">
						</div>
						
						<div class="col-md-6">
							<div class="form-floating mb-3">
								<input value="@Model.Course" class="form-control" readonly />
								<label class="form-label">
									<i class="fas fa-book me-2"></i>Course
								</label>
							</div>
						</div>
						
						<div class="col-md-6">
							<div class="form-floating mb-3">
								<input value="@Model.DateCreated.ToString("MMM dd, yyyy")" class="form-control" readonly />
								<label class="form-label">
									<i class="fas fa-calendar-alt me-2"></i>Date Created
								</label>
							</div>
						</div>
					</div>

					<!-- Action Buttons -->
					<div class="row">
						<div class="col-12">
							<div class="d-flex justify-content-between align-items-center">
								<a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill px-4">
									<i class="fas fa-times me-2"></i>Cancel
								</a>
								
								<button type="button" class="btn btn-danger btn-lg rounded-pill px-4" 
										data-bs-toggle="modal" data-bs-target="#deleteConfirmModal">
									<i class="fas fa-trash-alt me-2"></i>Delete Student
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header bg-danger text-white">
				<h5 class="modal-title" id="deleteConfirmModalLabel">
					<i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
				</h5>
				<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="text-center mb-4">
					<i class="fas fa-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
				</div>
				<h6 class="text-center mb-3">Are you absolutely sure?</h6>
				<p class="text-center text-muted mb-4">
					You are about to permanently delete <strong>@Model.Firstname @Model.Lastname</strong> from the system.
					<br><span class="text-danger fw-bold">This action cannot be undone!</span>
				</p>
				<div class="alert alert-warning d-flex align-items-center">
					<i class="fas fa-info-circle me-2"></i>
					<small>All student data including academic records will be permanently removed.</small>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
					<i class="fas fa-times me-2"></i>Cancel
				</button>
				<form method="post" asp-action="Delete" class="d-inline">
					<input type="hidden" asp-for="Id" />
					<button type="submit" class="btn btn-danger">
						<i class="fas fa-trash-alt me-2"></i>Yes, Delete Student
					</button>
				</form>
			</div>
		</div>
	</div>
</div>

<!-- Additional Styling -->
<style>
	.form-control[readonly] {
		background-color: #f8f9fa;
		opacity: 1;
	}
	
	.btn-danger:hover {
		transform: translateY(-2px);
		box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
	}
	
	.btn-secondary:hover {
		transform: translateY(-2px);
		box-shadow: 0 4px 8px rgba(108, 117, 125, 0.3);
	}
	
	.card {
		transition: all 0.3s ease;
	}
	
	.alert-danger {
		border-left: 4px solid #dc3545;
	}
</style>
