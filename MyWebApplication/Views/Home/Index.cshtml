<!-- CTA Section with Parallax Background -->
<section id="contact" class="cta-section py-4 py-md-5 bg-primary text-white parallax-container" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="parallax-bg">
        <div class="wave-animation"></div>
        <div class="floating-dots">
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
        </div>
    </div>
    <div class="container position-relative">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center px-3">
                <h2 class="display-5 display-md-4 fw-bold mb-3 mb-md-4 scroll-reveal">Ready to Start Your Journey?</h2>
                <p class="lead mb-4 mb-md-5 scroll-reveal" data-delay="100">Join thousands of students who have transformed their lives at Excellence Academy. Your future starts here.</p>
