@{
    ViewData["Title"] = "Welcome";
}

<!-- Hero Section -->
<section style="background-color: var(--bg-sidebar); color: white; padding: 6rem 0; position: relative; overflow: hidden;">
    <div class="container position-relative z-1">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-3 fw-bold mb-4" style="font-family: 'Playfair Display', serif; letter-spacing: -1px; color: white;">Excellence Academy</h1>
                <p class="lead mb-5" style="color: #94A3B8; font-weight: 300; line-height: 1.8;">Empowering the next generation of leaders through rigorous academic tradition and modern innovation. Your journey to excellence begins here.</p>
                <div class="d-flex gap-3">
                    <a asp-controller="Student" asp-action="Create" class="btn btn-accent btn-lg px-5 py-3 rounded-1" style="font-weight: 600; text-transform: uppercase; font-size: 0.85rem; letter-spacing: 1px;">Apply Now</a>
                    <a href="#programs" class="btn btn-outline-light btn-lg px-5 py-3 rounded-1" style="font-weight: 600; text-transform: uppercase; font-size: 0.85rem; letter-spacing: 1px;">Explore Programs</a>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block text-center">
                <!-- Abstract "Prestige" illustration using FontAwesome -->
                <div style="font-size: 15rem; color: rgba(212, 175, 55, 0.1);">
                    <i class="fas fa-university"></i>
                </div>
            </div>
        </div>
    </div>
    <!-- Decorative background element -->
    <div style="position: absolute; top: -50%; right: -20%; width: 800px; height: 800px; border-radius: 50%; border: 100px solid rgba(255,255,255,0.03);"></div>
</section>

<!-- Stats Strip -->
<section class="py-5 border-bottom" style="background-color: white;">
    <div class="container">
        <div class="row text-center g-4">
            <div class="col-md-3">
                <h2 class="fw-bold mb-0" style="color: var(--primary); font-size: 2.5rem;">2,500+</h2>
                <small class="text-uppercase text-muted fw-bold" style="letter-spacing: 1px;">Students</small>
            </div>
            <div class="col-md-3">
                <h2 class="fw-bold mb-0" style="color: var(--primary); font-size: 2.5rem;">150+</h2>
                <small class="text-uppercase text-muted fw-bold" style="letter-spacing: 1px;">Faculty</small>
            </div>
            <div class="col-md-3">
                <h2 class="fw-bold mb-0" style="color: var(--primary); font-size: 2.5rem;">98%</h2>
                <small class="text-uppercase text-muted fw-bold" style="letter-spacing: 1px;">Grad Rate</small>
            </div>
            <div class="col-md-3">
                <h2 class="fw-bold mb-0" style="color: var(--primary); font-size: 2.5rem;">50</h2>
                <small class="text-uppercase text-muted fw-bold" style="letter-spacing: 1px;">Years</small>
            </div>
        </div>
    </div>
</section>

<!-- Programs Section -->
<section id="programs" class="py-5" style="background-color: var(--bg-app);">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h6 style="color: var(--accent); text-transform: uppercase; letter-spacing: 2px; font-weight: 600;">Academics</h6>
            <h2 class="display-5 fw-bold" style="color: var(--primary);">Our Programs</h2>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-5">
                        <div class="mb-4" style="width: 60px; height: 60px; background-color: rgba(30, 41, 59, 0.05); color: var(--primary); display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                            <i class="fas fa-microscope fa-lg"></i>
                        </div>
                        <h4 class="mb-3">Science & Tech</h4>
                        <p class="text-muted mb-4">Pioneering research and advanced technological studies for the innovators of tomorrow.</p>
                        <a asp-controller="Student" asp-action="Index" class="text-decoration-none fw-bold" style="color: var(--accent);">View Students <i class="fas fa-arrow-right ms-2 small"></i></a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-5">
                        <div class="mb-4" style="width: 60px; height: 60px; background-color: rgba(30, 41, 59, 0.05); color: var(--primary); display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                            <i class="fas fa-palette fa-lg"></i>
                        </div>
                        <h4 class="mb-3">Arts & Culture</h4>
                        <p class="text-muted mb-4">Fostering creativity and expression through our world-class humanities programs.</p>
                        <a asp-controller="ActivityReservation" asp-action="Index" class="text-decoration-none fw-bold" style="color: var(--accent);">Reservations <i class="fas fa-arrow-right ms-2 small"></i></a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-5">
                        <div class="mb-4" style="width: 60px; height: 60px; background-color: rgba(30, 41, 59, 0.05); color: var(--primary); display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                            <i class="fas fa-chart-line fa-lg"></i>
                        </div>
                        <h4 class="mb-3">Business & Law</h4>
                        <p class="text-muted mb-4">Preparing ethical leaders for the global marketplace with rigorous practical training.</p>
                        <a asp-controller="GatePass" asp-action="Index" class="text-decoration-none fw-bold" style="color: var(--accent);">Gate Services <i class="fas fa-arrow-right ms-2 small"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Values Section -->
<section class="py-5" style="background-color: var(--primary); color: white;">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-5 mb-5 mb-lg-0">
                <h6 style="color: var(--accent); text-transform: uppercase; letter-spacing: 2px; font-weight: 600;">Our Values</h6>
                <h2 class="display-5 fw-bold mb-4">Why Excellence?</h2>
                <p class="text-muted mb-4" style="color: #94A3B8 !important;">We don't just teach; we cultivate character, integrity, and intellectual curiosity. Our approach encourages students to look beyond the textbook.</p>
                <div class="d-flex flex-column gap-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle me-3" style="color: var(--accent);"></i>
                        <span>World-class Research Facilities</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle me-3" style="color: var(--accent);"></i>
                        <span>Nationally Accredited Faculty</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle me-3" style="color: var(--accent);"></i>
                        <span>Global Alumni Network</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 offset-lg-1">
                <div class="row g-3">
                    <div class="col-6">
                        <div class="p-4" style="background: rgba(255,255,255,0.05); border-radius: 12px;">
                            <h3 class="fw-bold mb-2 text-white">100%</h3>
                            <p class="small text-white-50 mb-0">College Acceptance</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-4" style="background: rgba(255,255,255,0.05); border-radius: 12px;">
                            <h3 class="fw-bold mb-2 text-white">12:1</h3>
                            <p class="small text-white-50 mb-0">Student-Faculty Ratio</p>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="p-4" style="background: rgba(255,255,255,0.05); border-radius: 12px;">
                            <h3 class="fw-bold mb-2 text-white">Top 10</h3>
                            <p class="small text-white-50 mb-0">Ranked Regionally for STEM Innovation</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
