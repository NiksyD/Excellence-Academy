@{
    ViewData["Title"] = "Welcome to Excellence Academy";
}

<!-- Hero Section with Parallax -->
<section class="hero-section bg-primary text-white py-5 mb-0 parallax-container" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <!-- Animated Background Elements -->
    <div class="parallax-bg">
        <div class="floating-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
            <div class="shape shape-4"></div>
            <div class="shape shape-5"></div>
            <div class="shape shape-6"></div>
        </div>
        <div class="particles-container">
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
        </div>
    </div>
    
    <div class="container position-relative">
        <div class="row align-items-center min-vh-50 min-vh-lg-70">
            <div class="col-lg-6 mb-4 mb-lg-0 text-center text-lg-start hero-content">
                <h1 class="display-4 display-lg-3 fw-bold mb-3 mb-lg-4 fade-in-up">Excellence Academy</h1>
                <p class="lead mb-4 fs-5 fs-lg-4 fade-in-up" style="animation-delay: 0.2s;">Empowering minds, shaping futures. Join our community of learners where innovation meets tradition in education.</p>
                <div class="d-flex flex-column flex-sm-row justify-content-center justify-content-lg-start gap-3 fade-in-up" style="animation-delay: 0.4s;">
                    <a asp-controller="Student" asp-action="Create" class="btn btn-light btn-lg px-4 py-3 rounded btn-pulse">
                        <i class="fas fa-user-plus me-2"></i>Apply Now
                    </a>
                    <a href="#programs" class="btn btn-outline-light btn-lg px-4 py-3 rounded btn-hover-glow">
                        <i class="fas fa-compass me-2"></i>Explore Programs
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center d-none d-lg-block">
                <div class="hero-image-container floating-element">
                    <div class="hero-image-placeholder bg-white bg-opacity-10 rounded-4 p-5" style="min-height: 300px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-graduation-cap rotating-icon" style="font-size: 8rem; opacity: 0.7;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section with Counter Animation -->
<section class="stats-section py-4 py-md-5 bg-light parallax-section" data-scroll-speed="0.5">
    <div class="container">
        <div class="row text-center g-3">
            <div class="col-6 col-md-3">
                <div class="stat-item scroll-reveal" data-delay="0">
                    <h3 class="display-5 display-md-4 fw-bold text-primary mb-2 counter" data-target="2500">0</h3>
                    <p class="text-muted mb-0 small">Students</p>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-item scroll-reveal" data-delay="100">
                    <h3 class="display-5 display-md-4 fw-bold text-primary mb-2 counter" data-target="150">0</h3>
                    <p class="text-muted mb-0 small">Faculty Members</p>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-item scroll-reveal" data-delay="200">
                    <h3 class="display-5 display-md-4 fw-bold text-primary mb-2 counter" data-target="98">0</h3>
                    <p class="text-muted mb-0 small">Graduation Rate</p>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-item scroll-reveal" data-delay="300">
                    <h3 class="display-5 display-md-4 fw-bold text-primary mb-2 counter" data-target="50">0</h3>
                    <p class="text-muted mb-0 small">Years of Excellence</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Programs Section with Parallax -->
<section id="programs" class="programs-section py-4 py-md-5 parallax-section" data-scroll-speed="0.3">
    <div class="container">
        <div class="row mb-4 mb-md-5">
            <div class="col-lg-8 mx-auto text-center px-3">
                <h2 class="display-5 display-md-4 fw-bold mb-3 mb-md-4 scroll-reveal">Our Programs</h2>
                <p class="lead text-muted scroll-reveal" data-delay="100">Discover our comprehensive range of academic programs designed to nurture talent and foster growth.</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-sm border-0 program-card scroll-reveal" data-delay="0">
                    <div class="card-body p-4">
                        <div class="program-icon mb-3">
                            <i class="fas fa-microscope text-primary icon-hover" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3">Science & Technology</h5>
                        <p class="card-text text-muted mb-4">Advanced STEM programs with state-of-the-art laboratories and research opportunities.</p>
                        <a asp-controller="Student" asp-action="Index" class="btn btn-outline-primary rounded btn-hover-slide">View Students</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-sm border-0 program-card scroll-reveal" data-delay="100">
                    <div class="card-body p-4">
                        <div class="program-icon mb-3">
                            <i class="fas fa-palette text-primary icon-hover" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3">Arts & Humanities</h5>
                        <p class="card-text text-muted mb-4">Creative programs fostering artistic expression and cultural understanding.</p>
                        <a asp-controller="ActivityReservation" asp-action="Index" class="btn btn-outline-primary rounded btn-hover-slide">View Reservations</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-sm border-0 program-card scroll-reveal" data-delay="200">
                    <div class="card-body p-4">
                        <div class="program-icon mb-3">
                            <i class="fas fa-chart-line text-primary icon-hover" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3">Business Studies</h5>
                        <p class="card-text text-muted mb-4">Comprehensive business education preparing future leaders and entrepreneurs.</p>
                        <a asp-controller="GatePass" asp-action="Index" class="btn btn-outline-primary rounded btn-hover-slide">Gate Pass Management</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-4 py-md-5 bg-light">
    <div class="container">
        <div class="row mb-4 mb-md-5">
            <div class="col-lg-8 mx-auto text-center px-3">
                <h2 class="display-5 display-md-4 fw-bold mb-3 mb-md-4">Why Choose Excellence Academy?</h2>
                <p class="lead text-muted">We provide an exceptional educational experience that prepares students for success in the modern world.</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="feature-item d-flex mb-4">
                    <div class="feature-icon me-4">
                        <i class="fas fa-users-cog text-primary" style="font-size: 2.5rem;"></i>
                    </div>
                    <div>
                        <h5 class="fw-bold mb-2">Expert Faculty</h5>
                        <p class="text-muted mb-0">Learn from industry professionals and academic experts with years of experience.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="feature-item d-flex mb-4">
                    <div class="feature-icon me-4">
                        <i class="fas fa-laptop-code text-primary" style="font-size: 2.5rem;"></i>
                    </div>
                    <div>
                        <h5 class="fw-bold mb-2">Modern Technology</h5>
                        <p class="text-muted mb-0">State-of-the-art facilities and cutting-edge technology in every classroom.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="feature-item d-flex mb-4">
                    <div class="feature-icon me-4">
                        <i class="fas fa-globe-americas text-primary" style="font-size: 2.5rem;"></i>
                    </div>
                    <div>
                        <h5 class="fw-bold mb-2">Global Perspective</h5>
                        <p class="text-muted mb-0">International partnerships and exchange programs for a global education experience.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="feature-item d-flex mb-4">
                    <div class="feature-icon me-4">
                        <i class="fas fa-medal text-primary" style="font-size: 2.5rem;"></i>
                    </div>
                    <div>
                        <h5 class="fw-bold mb-2">Excellence Recognition</h5>
                        <p class="text-muted mb-0">Nationally recognized programs with numerous awards and accreditations.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

