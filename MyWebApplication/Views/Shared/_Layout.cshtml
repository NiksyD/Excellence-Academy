<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Excellence Academy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyWebApplication.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="sidebar-overlay" id="sidebarOverlay"></div>
    <div class="app-container">
        <!-- SIDEBAR NAVIGATION -->
        <aside class="app-sidebar">
            <div class="sidebar-header">
                <i class="fas fa-graduation-cap brand-icon"></i>
                <span class="brand-text">Excellence Academy</span>
            </div>

            <nav class="sidebar-nav">
                <a asp-controller="Home" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                    <div class="nav-icon"><i class="fas fa-home"></i></div>
                    <span>Overview</span>
                </a>
                
                <a asp-controller="Student" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Student" ? "active" : "")">
                    <div class="nav-icon"><i class="fas fa-users"></i></div>
                    <span>Students</span>
                </a>

                <a asp-controller="GatePass" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "GatePass" ? "active" : "")">
                    <div class="nav-icon"><i class="fas fa-id-card"></i></div>
                    <span>Gate Pass</span>
                </a>

                <a asp-controller="ActivityReservation" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "ActivityReservation" ? "active" : "")">
                    <div class="nav-icon"><i class="fas fa-calendar-alt"></i></div>
                    <span>Reservations</span>
                </a>

                <a asp-controller="LockerRequest" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "LockerRequest" ? "active" : "")">
                    <div class="nav-icon"><i class="fas fa-key"></i></div>
                    <span>Lockers</span>
                </a>

                @if (User.IsInRole("Admin"))
                {
                    <div style="margin-top: 1.5rem; padding-left: 1rem; margin-bottom: 0.5rem; font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.05em; color: var(--text-muted);">
                        Admin
                    </div>
                }
            </nav>

            <div class="sidebar-footer">
                @using Microsoft.AspNetCore.Identity
                @using MyWebApplication.Models
                @inject SignInManager<ApplicationUser> SignInManager
                @inject UserManager<ApplicationUser> UserManager
                
                @if (SignInManager.IsSignedIn(User))
                {
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                        <button type="submit" class="btn btn-outline-light w-100 btn-sm" style="border-color: rgba(255,255,255,0.2); color: #CBD5E1;">
                            <i class="fas fa-sign-out-alt me-2"></i> Sign Out
                        </button>
                    </form>
                }
            </div>
        </aside>

        <!-- MAIN LAYOUT -->
        <div class="app-main">
            <!-- TOP HEADER -->
            <header class="app-topbar">
                <button class="mobile-toggle" type="button" id="sidebarToggle" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="topbar-title">
                    @ViewData["Title"]
                </div>

                <div class="user-menu">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div class="d-flex align-items-center gap-2">
                            <div style="text-align: right; line-height: 1.2;">
                                <div style="font-weight: 600; font-size: 0.9rem; color: var(--primary);">@User.Identity?.Name</div>
                                <div style="font-size: 0.75rem; color: var(--text-muted);">
                                    @if (User.IsInRole("Admin")) { <span>Administrator</span> } else { <span>Student</span> }
                                </div>
                            </div>
                            <div style="width: 36px; height: 36px; background-color: var(--primary); color: var(--accent); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 600;">
                                @User.Identity?.Name?.Substring(0,1).ToUpper()
                            </div>
                        </div>
                    }
                    else
                    {
                        <a href="/Identity/Account/Login" class="btn-login">
                            Log In
                        </a>
                        <a asp-controller="Student" asp-action="Create" class="btn btn-sm btn-outline-dark">
                            Apply Now
                        </a>
                    }
                </div>
            </header>

            <!-- CONTENT BODY -->
            <main class="main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/watermark-remover.js" asp-append-version="true"></script>

    <script>
        // Simple Sidebar Toggle Logic
        document.addEventListener('DOMContentLoaded', function() {
            const toggle = document.getElementById('sidebarToggle');
            const sidebar = document.querySelector('.app-sidebar');
            const overlay = document.getElementById('sidebarOverlay');
            
            function toggleSidebar() {
                sidebar.classList.toggle('show');
                overlay.classList.toggle('show');
            }

            if(toggle) {
                toggle.addEventListener('click', function(e) {
                    e.stopPropagation(); // Prevent immediate closing
                    toggleSidebar();
                });
            }

            if(overlay) {
                overlay.addEventListener('click', toggleSidebar);
            }

            // Close sidebar when clicking a link on mobile
            const navLinks = document.querySelectorAll('.sidebar-nav .nav-link');
            navLinks.forEach(link => {
                link.addEventListener('click', function() {
                     if (window.innerWidth < 992) {
                         sidebar.classList.remove('show');
                         overlay.classList.remove('show');
                     }
                });
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
