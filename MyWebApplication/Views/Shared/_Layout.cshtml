<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Excellence Academy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyWebApplication.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Shared/mac-dock.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Shared/mobile-dropdown.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Shared/footer.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <!-- Mobile Dropdown Navigation (Mobile/Tablet Only) -->
        <div class="mobile-header">
            <div class="mobile-header-content">
                <!-- Brand -->
                <a asp-controller="Home" asp-action="Index" class="mobile-brand">
                    <i class="fas fa-graduation-cap"></i>
                    <span>Excellence Academy</span>
                </a>
                
                <!-- Dropdown Trigger -->
                <button class="mobile-nav-trigger" aria-label="Navigation Menu" aria-expanded="false">
                    <i class="fas fa-bars"></i>
                    <span>Menu</span>
                    <i class="fas fa-chevron-down"></i>
                </button>
            </div>
            
            <!-- Dropdown Menu -->
            <div class="mobile-nav-dropdown">
                <ul class="mobile-nav-list">
                    <li class="mobile-nav-item">
                        <a asp-controller="Home" asp-action="Index" class="mobile-nav-link">
                            <i class="fas fa-home"></i>
                            <span>Home</span>
                        </a>
                    </li>
                    <li class="mobile-nav-item">
                        <a asp-controller="Student" asp-action="Index" class="mobile-nav-link">
                            <i class="fas fa-users"></i>
                            <span>Student Portal</span>
                        </a>
                    </li>
                    <li class="mobile-nav-item">
                        <a asp-controller="GatePass" asp-action="Index" class="mobile-nav-link">
                            <i class="fas fa-id-card"></i>
                            <span>Gate Pass</span>
                        </a>
                    </li>
                    <li class="mobile-nav-item">
                        <a asp-controller="ActivityReservation" asp-action="Index" class="mobile-nav-link">
                            <i class="fas fa-calendar-alt"></i>
                            <span>Activity Reservations</span>
                        </a>
                    </li>
                    <li class="mobile-nav-item">
                        <a asp-controller="LockerRequest" asp-action="Index" class="mobile-nav-link">
                            <i class="fas fa-key"></i>
                            <span>Locker Request</span>
                        </a>
                    </li>
                </ul>
                
                <div class="mobile-nav-divider"></div>
                
                <!-- Action Buttons -->
                <div class="mobile-nav-actions">
                    <a asp-controller="Student" asp-action="Create" class="mobile-action-btn primary">
                        <i class="fas fa-user-plus"></i>
                        <span>Apply Now</span>
                    </a>
                    <a href="@Url.Action("Index", "Home")#contact" class="mobile-action-btn secondary schedule-visit-btn">
                        <i class="fas fa-calendar-check"></i>
                        <span>Schedule Visit</span>
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Overlay for closing dropdown -->
        <div class="mobile-nav-overlay"></div>
        
        <!-- Mac-Style Dock Navigation (Desktop Only) -->
        <nav class="mac-dock" role="navigation" aria-label="Main navigation dock">
            <!-- Brand/Logo -->
            <a asp-controller="Home" asp-action="Index" class="dock-item dock-brand" data-tooltip="Excellence Academy" aria-label="Excellence Academy Home">
                <i class="fas fa-graduation-cap"></i>
            </a>
            
            <!-- Main Navigation Items -->
            <a asp-controller="Student" asp-action="Index" class="dock-item" data-tooltip="Student Portal" aria-label="Student Portal">
                <i class="fas fa-users"></i>
            </a>
            
            <a asp-controller="GatePass" asp-action="Index" class="dock-item" data-tooltip="Gate Pass" aria-label="Gate Pass">
                <i class="fas fa-id-card"></i>
            </a>
            
            <a asp-controller="ActivityReservation" asp-action="Index" class="dock-item" data-tooltip="Activity Reservations" aria-label="Activity Reservations">
                <i class="fas fa-calendar-alt"></i>
            </a>
            
            <a asp-controller="LockerRequest" asp-action="Index" class="dock-item" data-tooltip="Locker Request" aria-label="Locker Request">
                <i class="fas fa-key"></i>
            </a>
            
            <!-- Action Buttons -->
            <div class="dock-actions">
                <a href="@Url.Action("Index", "Home")#contact" class="dock-action schedule-visit-btn" data-tooltip="Schedule Visit" aria-label="Schedule Visit">
                    <i class="fas fa-calendar-check"></i>
                </a>
                
                <a asp-controller="Student" asp-action="Create" class="dock-action primary" data-tooltip="Apply Now" aria-label="Apply Now">
                    <i class="fas fa-user-plus"></i>
                </a>
            </div>
        </nav>
    </header>
    <main role="main" id="main-content">
        @RenderBody()
    </main>

    <footer class="mac-footer">
        <div class="footer-decoration"></div>
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4 footer-fade-in" style="animation-delay: 0.1s">
                    <div class="footer-brand">
                        <div class="footer-brand-icon">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <h5 class="footer-brand-text">Excellence Academy</h5>
                    </div>
                    <p class="footer-description">Empowering minds, shaping futures. Join our community of learners where innovation meets tradition in education.</p>
                    <div class="footer-social">
                        <a href="#" class="social-link" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-link" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-link" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-link" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 footer-fade-in" style="animation-delay: 0.2s">
                    <h6 class="footer-section-title">Quick Links</h6>
                    <ul class="footer-links">
                        <li><a href="#" class="footer-link">About Us</a></li>
                        <li><a href="#programs" class="footer-link">Programs</a></li>
                        <li><a href="#" class="footer-link">Admissions</a></li>
                        <li><a href="#" class="footer-link">Faculty</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-6 footer-fade-in" style="animation-delay: 0.3s">
                    <h6 class="footer-section-title">Student Life</h6>
                    <ul class="footer-links">
                        <li><a href="#" class="footer-link">Campus</a></li>
                        <li><a href="#" class="footer-link">Activities</a></li>
                        <li><a href="#" class="footer-link">Sports</a></li>
                        <li><a asp-controller="Student" asp-action="Index" class="footer-link">Student Portal</a></li>
                    </ul>
                </div>
                <div class="col-lg-4 footer-fade-in" style="animation-delay: 0.4s">
                    <h6 class="footer-section-title">Contact Information</h6>
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <p class="contact-text">123 Education Street<br>Learning City, LC 12345</p>
                    </div>
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <p class="contact-text">(555) 123-4567</p>
                    </div>
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <p class="contact-text">info@excellenceacademy.edu</p>
                    </div>
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <p class="contact-text">Mon-Fri: 8:00 AM - 6:00 PM</p>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p class="footer-copyright">&copy; 2025 Excellence Academy. All rights reserved.</p>
                    </div>
                    <div class="col-md-6">
                        <div class="footer-bottom-links">
                            <a asp-controller="Home" asp-action="Privacy" class="footer-bottom-link">Privacy Policy</a>
                            <a href="#" class="footer-bottom-link">Terms of Service</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Shared/mac-dock.js" asp-append-version="true"></script>
    <script src="~/js/Shared/mobile-dropdown.js" asp-append-version="true"></script>
    <script src="~/js/watermark-remover.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
