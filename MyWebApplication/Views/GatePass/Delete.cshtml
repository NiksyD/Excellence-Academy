@model MyWebApplication.Models.GatePass

@{
    ViewData["Title"] = "Delete Gate Pass - Excellence Academy";
}

<!-- Header Section -->
<section class="bg-danger text-white py-5" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8 mb-3 mb-md-0">
                <h1 class="display-6 fw-bold mb-2">
                    <i class="fas fa-trash-alt me-3"></i>Delete Gate Pass
                </h1>
                <p class="lead mb-0">Confirm deletion of gate pass application</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Index" class="btn btn-light btn-lg rounded px-4">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Warning Card -->
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Confirm Deletion
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-4">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning:</strong> This action cannot be undone. All associated documents will also be permanently deleted.
                    </div>

                    <!-- Gate Pass Summary -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">Applicant Details</h6>
                            <div class="mb-2">
                                <strong>Gate Pass ID:</strong> #@Model.Id
                            </div>
                            <div class="mb-2">
                                <strong>Applicant:</strong> @Model.Name
                            </div>
                            <div class="mb-2">
                                <strong>Address:</strong> @Model.Address
                            </div>
                            <div class="mb-2">
                                <strong>Department:</strong> @Model.Department
                            </div>
                            <div class="mb-2">
                                <strong>Faculty:</strong> @Model.Faculty
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">Vehicle Details</h6>
                            <div class="mb-2">
                                <strong>Vehicle Type:</strong> @Model.VehicleType
                            </div>
                            <div class="mb-2">
                                <strong>Plate Number:</strong> @Model.VehiclePlateNo
                            </div>
                            <div class="mb-2">
                                <strong>Maker:</strong> @Model.Maker
                            </div>
                            <div class="mb-2">
                                <strong>Color:</strong> @Model.Color
                            </div>
                            <div class="mb-2">
                                <strong>Status:</strong> 
                                <span class="badge bg-warning text-dark">@Model.Status</span>
                            </div>
                            <div class="mb-2">
                                <strong>Date Applied:</strong> @Model.Date.ToString("MMM dd, yyyy")
                            </div>
                        </div>
                    </div>

                    <!-- Additional Information -->
                    <div class="mb-4">
                        <h6 class="text-muted mb-3">Additional Information</h6>
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <strong>Course/Year:</strong> @Model.CourseYear
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>Registration Expiry:</strong> @(Model.RegistrationExpiryDate?.ToString("MMM dd, yyyy") ?? "N/A")
                            </div>
                        </div>
                    </div>

                    <!-- Attached Documents -->
                    @if (Model.Documents != null && Model.Documents.Any())
                    {
                        <div class="mb-4">
                            <h6 class="text-muted mb-3">Attached Documents (will be deleted)</h6>
                            <div class="row g-2">
                                @foreach (var document in Model.Documents)
                                {
                                    <div class="col-md-6">
                                        <div class="border rounded p-2 bg-light">
                                            <div class="d-flex align-items-center">
                                                @if (document.ContentType.Contains("pdf"))
                                                {
                                                    <i class="fas fa-file-pdf text-danger me-2"></i>
                                                }
                                                else if (document.ContentType.Contains("word") || document.ContentType.Contains("document"))
                                                {
                                                    <i class="fas fa-file-word text-primary me-2"></i>
                                                }
                                                else if (document.ContentType.Contains("image"))
                                                {
                                                    <i class="fas fa-file-image text-success me-2"></i>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-file text-muted me-2"></i>
                                                }
                                                <div class="flex-grow-1">
                                                    <small class="fw-medium">@document.FileName</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- Confirmation Form -->
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        @Html.AntiForgeryToken()
                        
                        <div class="d-flex flex-column flex-sm-row justify-content-between align-items-stretch gap-3">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-lg rounded px-4">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="button" class="btn btn-danger btn-lg rounded px-5" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                                <i class="fas fa-trash-alt me-2"></i>Delete Gate Pass
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">
                    <i class="fas fa-trash-alt me-2"></i>Confirm Deletion
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <i class="fas fa-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                </div>
                <p class="text-center mb-3">Are you absolutely sure you want to delete this gate pass application?</p>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    This will permanently delete:
                    <ul class="mb-0 mt-2">
                        <li>Gate Pass #@Model.Id for <strong>@Model.Name</strong></li>
                        <li>Vehicle: <strong>@Model.VehiclePlateNo</strong> (@Model.VehicleType)</li>
                        @if (Model.Documents != null && Model.Documents.Any())
                        {
                            <li>@Model.Documents.Count attached document(s)</li>
                        }
                        <li>All associated data</li>
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                    <i class="fas fa-trash-alt me-2"></i>Yes, Delete Permanently
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            // Close the modal
            const modal = document.getElementById('confirmDeleteModal');
            const modalInstance = bootstrap.Modal.getInstance(modal);
            modalInstance.hide();
            
            // Submit the form
            document.querySelector('form[method="post"]').submit();
        }
    </script>
}

