@model MyWebApplication.Models.GatePass

@{
    ViewData["Title"] = "Gate Pass Details - Excellence Academy";
}

<!-- Header Section -->
<section class="bg-primary text-white py-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold mb-2">
                    <i class="fas fa-id-card me-3"></i>Gate Pass Details
                </h1>
                <p class="lead mb-0">Application #@Model.Id - @Model.Name</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Index" class="btn btn-light rounded-pill px-4">
                    <i class="fas fa-arrow-left me-2"></i>Back to Gate Passes
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<div class="container py-5">
    <div class="row">
        <!-- Left Column - Application Details -->
        <div class="col-lg-8">
            <!-- Status Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="mb-1">Application Status</h5>
                            <p class="text-muted mb-0">Current status of this gate pass application</p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            @if (Model.Status == "Pending")
                            {
                                <span class="badge bg-warning fs-6 px-3 py-2">
                                    <i class="fas fa-clock me-2"></i>Pending Review
                                </span>
                            }
                            else if (Model.Status == "Approved")
                            {
                                <span class="badge bg-success fs-6 px-3 py-2">
                                    <i class="fas fa-check-circle me-2"></i>Approved
                                </span>
                            }
                            else if (Model.Status == "Rejected")
                            {
                                <span class="badge bg-danger fs-6 px-3 py-2">
                                    <i class="fas fa-times-circle me-2"></i>Rejected
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Personal Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-user me-2"></i>Personal Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Full Name</label>
                            <p class="mb-0">@Model.Name</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Department</label>
                            <p class="mb-0">@Model.Department</p>
                        </div>
                        <div class="col-md-12">
                            <label class="form-label fw-bold text-muted">Address</label>
                            <p class="mb-0">@Model.Address</p>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Faculty))
                        {
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-muted">Faculty</label>
                                <p class="mb-0">@Model.Faculty</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.CourseYear))
                        {
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-muted">Course & Year</label>
                                <p class="mb-0">@Model.CourseYear</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Vehicle Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-car me-2"></i>Vehicle Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Plate Number</label>
                            <p class="mb-0 fw-bold text-primary">@Model.VehiclePlateNo</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Vehicle Type</label>
                            <p class="mb-0">@Model.VehicleType</p>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Maker))
                        {
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-muted">Maker</label>
                                <p class="mb-0">@Model.Maker</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Color))
                        {
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-muted">Color</label>
                                <p class="mb-0">@Model.Color</p>
                            </div>
                        }
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-muted">Application Date</label>
                            <p class="mb-0">@Model.Date.ToString("MMMM dd, yyyy")</p>
                        </div>
                        @if (Model.RegistrationExpiryDate.HasValue)
                        {
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-muted">Registration Expiry</label>
                                <p class="mb-0">@Model.RegistrationExpiryDate.Value.ToString("MMMM dd, yyyy")</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Attached Documents -->
            @if (Model.Documents != null && Model.Documents.Any())
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="fas fa-paperclip me-2"></i>Attached Documents
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @foreach (var document in Model.Documents)
                            {
                                <div class="col-md-6">
                                    <div class="border rounded p-3 h-100">
                                        <div class="d-flex align-items-center mb-2">
                                            @if (document.ContentType.Contains("pdf"))
                                            {
                                                <i class="fas fa-file-pdf fa-2x text-danger me-3"></i>
                                            }
                                            else if (document.ContentType.Contains("word") || document.ContentType.Contains("document"))
                                            {
                                                <i class="fas fa-file-word fa-2x text-primary me-3"></i>
                                            }
                                            else if (document.ContentType.Contains("image"))
                                            {
                                                <i class="fas fa-file-image fa-2x text-success me-3"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-file fa-2x text-muted me-3"></i>
                                            }
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">@document.FileName</h6>
                                                <small class="text-muted">
                                                    @(Math.Round((double)document.FileSize / 1024 / 1024, 2)) MB
                                                </small>
                                            </div>
                                        </div>
                                        <div class="d-flex gap-2">
                                            <a href="~/uploads/gatepasses/@document.StoredFileName" target="_blank" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-eye me-1"></i>View
                                            </a>
                                            <a href="~/uploads/gatepasses/@document.StoredFileName" download="@document.FileName" class="btn btn-outline-secondary btn-sm">
                                                <i class="fas fa-download me-1"></i>Download
                                            </a>
                                        </div>
                                        <div class="mt-2">
                                            <small class="text-muted">
                                                Uploaded: @document.UploadedAt.ToString("MMM dd, yyyy 'at' h:mm tt")
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Additional Information -->
            @if (!string.IsNullOrEmpty(Model.Remarks))
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="fas fa-comment me-2"></i>Additional Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="form-label fw-bold text-muted">Remarks</label>
                                <p class="mb-0">@Model.Remarks</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Right Column - Actions & Timeline -->
        <div class="col-lg-4">
            <!-- Action Buttons -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-cogs me-2"></i>Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (Model.Status == "Pending")
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="fas fa-edit me-2"></i>Edit Application
                            </a>
                            <a asp-action="Review" asp-route-id="@Model.Id" class="btn btn-success">
                                <i class="fas fa-check me-2"></i>Review Application
                            </a>
                        }
                        else if (Model.Status == "Approved")
                        {
                            <button class="btn btn-outline-primary" onclick="window.print()">
                                <i class="fas fa-print me-2"></i>Print Gate Pass
                            </button>
                        }
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-2"></i>View All Applications
                        </a>
                    </div>
                </div>
            </div>

            <!-- Application Timeline -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-history me-2"></i>Application Timeline
                    </h6>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <h6 class="mb-1">Application Submitted</h6>
                                <p class="text-muted small mb-0">@Model.DateCreated.ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                            </div>
                        </div>
                        
                        @if (Model.Status == "Approved" && Model.ApprovalDate.HasValue)
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-success"></div>
                                <div class="timeline-content">
                                    <h6 class="mb-1">Application Approved</h6>
                                    <p class="text-muted small mb-1">@Model.ApprovalDate.Value.ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                                    @if (!string.IsNullOrEmpty(Model.ApprovedBy))
                                    {
                                        <p class="text-muted small mb-0">Approved by: @Model.ApprovedBy</p>
                                    }
                                </div>
                            </div>
                        }
                        else if (Model.Status == "Rejected")
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-danger"></div>
                                <div class="timeline-content">
                                    <h6 class="mb-1">Application Rejected</h6>
                                    <p class="text-muted small mb-0">@DateTime.Now.ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/GatePass/details.css" />
}