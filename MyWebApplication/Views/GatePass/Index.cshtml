@model IEnumerable<MyWebApplication.Models.GatePass>

@{
    ViewData["Title"] = "Gate Pass Management";
}

<div class="container-fluid p-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-5 gap-3">
        <div>
            <h1 class="display-6 fw-bold text-primary mb-2">Gate Pass Requests</h1>
            <p class="text-muted mb-0">Manage vehicle access and security clearance requests.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>New Request
        </a>
    </div>

    <!-- Stats Row -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="rounded-circle p-3 me-3" style="background-color: rgba(30, 41, 59, 0.1); color: var(--primary);">
                        <i class="fas fa-file-alt fa-lg"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold mb-0">@(Model?.Count() ?? 0)</h3>
                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Total</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="rounded-circle p-3 me-3" style="background-color: rgba(212, 175, 55, 0.1); color: var(--accent);">
                        <i class="fas fa-clock fa-lg"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold mb-0">@(Model?.Count(x => x.Status == "Pending") ?? 0)</h3>
                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Pending</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4 d-flex align-items-center">
                    <div class="rounded-circle p-3 me-3" style="background-color: rgba(25, 135, 84, 0.1); color: #198754;">
                        <i class="fas fa-check-circle fa-lg"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold mb-0">@(Model?.Count(x => x.Status == "Approved") ?? 0)</h3>
                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Approved</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3 border-0">
            <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">
                <h5 class="mb-0 fw-bold">Recent Requests</h5>
                <div class="input-group" style="width: 100%; max-width: 300px;">
                    <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                    <input type="text" class="form-control border-start-0 ps-0" placeholder="Search requests...">
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive-xl">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 text-uppercase text-muted" style="font-size: 0.75rem; letter-spacing: 1px;">Applicant</th>
                            <th class="text-uppercase text-muted" style="font-size: 0.75rem; letter-spacing: 1px;">Details</th>
                            <th class="text-uppercase text-muted" style="font-size: 0.75rem; letter-spacing: 1px;">Date</th>
                            <th class="text-uppercase text-muted" style="font-size: 0.75rem; letter-spacing: 1px;">Status</th>
                            <th class="text-end pe-4 text-uppercase text-muted" style="font-size: 0.75rem; letter-spacing: 1px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-3 bg-light text-primary fw-bold d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; border-radius: 50%;">
                                            @(item.Name?.Substring(0, 1) ?? "U")
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@item.Name</div>
                                            <small class="text-muted">@item.Department</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="text-dark fw-medium">@item.VehiclePlateNo</div>
                                    <small class="text-muted">@item.VehicleType</small>
                                </td>
                                <td class="text-muted">
                                    @item.Date.ToString("MMM dd, yyyy")
                                </td>
                                <td>
                                    @if(item.Status == "Pending") {
                                        <span class="badge bg-warning text-dark bg-opacity-10 px-3 py-2 rounded-pill" style="color: #b45309 !important; background-color: #fffbeb !important;">Pending</span>
                                    } else if (item.Status == "Approved") {
                                        <span class="badge bg-success text-success bg-opacity-10 px-3 py-2 rounded-pill" style="color: #14532d !important; background-color: #dcfce7 !important;">Approved</span>
                                    } else {
                                        <span class="badge bg-danger text-danger bg-opacity-10 px-3 py-2 rounded-pill" style="color: #7f1d1d !important; background-color: #fee2e2 !important;">Rejected</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="dropdown">
                                        <button class="btn btn-light btn-sm rounded-circle" type="button" data-bs-toggle="dropdown">
                                            <i class="fas fa-ellipsis-v text-muted"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye me-2 text-primary"></i>View Details</a></li>
                                            @if(item.Status == "Pending") {
                                                <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit me-2 text-muted"></i>Edit</a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt me-2"></i>Delete</a></li>
                                            }
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>