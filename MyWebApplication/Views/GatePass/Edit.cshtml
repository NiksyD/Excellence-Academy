@model MyWebApplication.Models.GatePass

@{
    ViewData["Title"] = "Edit Gate Pass - Excellence Academy";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Shared/form-page.css" asp-append-version="true" />
}

<!-- Header Section - Mac Style -->
<section class="form-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-2">
                    <i class="fas fa-edit me-3 header-icon"></i>Edit Gate Pass
                </h1>
                <p class="lead mb-0">Update gate pass application details</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Index" class="btn-cancel-mac">
                    <i class="fas fa-arrow-left"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-card fade-in-up" style="animation-delay: 0.1s">
                <div class="form-card-header">
                    <h5>
                        <i class="fas fa-edit"></i>Edit Gate Pass Application
                    </h5>
                </div>
                <div class="form-card-body">
                    <!-- Application Info Alert -->
                    <div class="alert alert-warning mb-4">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Note:</strong> You are editing Gate Pass Application <strong>#@Model.Id</strong> | Current Status: 
                            @if (Model.Status == "Pending")
                            {
                                <span class="badge bg-warning">Pending</span>
                            }
                            else if (Model.Status == "Approved")
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else if (Model.Status == "Rejected")
                            {
                                <span class="badge bg-danger">Rejected</span>
                            }
                        </span>
                    </div>

                    <form asp-action="Edit" method="post" enctype="multipart/form-data" id="editGatePassForm">
                        <div class="row g-4">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="DateCreated" />
                            <input type="hidden" asp-for="Status" />
                            <input type="hidden" asp-for="ApprovedBy" />
                            <input type="hidden" asp-for="ApprovalDate" />
                            
                            <!-- Personal Information Section -->
                            <div class="col-12">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-user me-2"></i>Personal Information
                                </h5>
                                <hr class="mb-4">
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="Name" class="form-label-mac">
                                        <i class="fas fa-user"></i>Full Name<span class="required">*</span>
                                    </label>
                                    <input asp-for="Name" class="form-control-mac" placeholder="Enter full name" />
                                    <span asp-validation-for="Name" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="Department" class="form-label-mac">
                                        <i class="fas fa-building"></i>Department<span class="required">*</span>
                                    </label>
                                    <select asp-for="Department" class="form-select-mac">
                                        <option value="">Select Department</option>
                                        <option value="Computer Science">Computer Science</option>
                                        <option value="Information Technology">Information Technology</option>
                                        <option value="Engineering">Engineering</option>
                                        <option value="Business Administration">Business Administration</option>
                                        <option value="Education">Education</option>
                                        <option value="Arts and Sciences">Arts and Sciences</option>
                                        <option value="Nursing">Nursing</option>
                                        <option value="Architecture">Architecture</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="Department" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <div class="form-group-mac">
                                    <label asp-for="Address" class="form-label-mac">
                                        <i class="fas fa-map-marker-alt"></i>Address<span class="required">*</span>
                                    </label>
                                    <textarea asp-for="Address" class="form-control-mac form-textarea-mac" placeholder="Enter complete address" style="min-height: 100px;"></textarea>
                                    <span asp-validation-for="Address" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="Faculty" class="form-label-mac">
                                        <i class="fas fa-chalkboard-teacher"></i>Faculty<span class="required">*</span>
                                    </label>
                                    <input asp-for="Faculty" class="form-control-mac" placeholder="Enter faculty" />
                                    <span asp-validation-for="Faculty" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="CourseYear" class="form-label-mac">
                                        <i class="fas fa-graduation-cap"></i>Course & Year<span class="required">*</span>
                                    </label>
                                    <input asp-for="CourseYear" class="form-control-mac" placeholder="Enter course & year" />
                                    <span asp-validation-for="CourseYear" class="invalid-feedback-mac"></span>
                                </div>
                            </div>

                            <!-- Vehicle Information Section -->
                            <div class="col-12 mt-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-car me-2"></i>Vehicle Information
                                </h5>
                                <hr class="mb-4">
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="VehiclePlateNo" class="form-label-mac">
                                        <i class="fas fa-id-badge"></i>Vehicle Plate No.<span class="required">*</span>
                                    </label>
                                    <input asp-for="VehiclePlateNo" class="form-control-mac text-uppercase" placeholder="Enter plate number" />
                                    <span asp-validation-for="VehiclePlateNo" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="VehicleType" class="form-label-mac">
                                        <i class="fas fa-car"></i>Vehicle Type<span class="required">*</span>
                                    </label>
                                    <select asp-for="VehicleType" class="form-select-mac">
                                        <option value="">Select Vehicle Type</option>
                                        <option value="Motorcycle">Motorcycle</option>
                                        <option value="Car">Car</option>
                                        <option value="SUV">SUV</option>
                                        <option value="Van">Van</option>
                                        <option value="Truck">Truck</option>
                                        <option value="Bicycle">Bicycle</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="VehicleType" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="Maker" class="form-label-mac">
                                        <i class="fas fa-industry"></i>Maker<span class="required">*</span>
                                    </label>
                                    <input asp-for="Maker" class="form-control-mac" placeholder="Enter vehicle maker" />
                                    <span asp-validation-for="Maker" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="Color" class="form-label-mac">
                                        <i class="fas fa-palette"></i>Color<span class="required">*</span>
                                    </label>
                                    <input asp-for="Color" class="form-control-mac" placeholder="Enter vehicle color" />
                                    <span asp-validation-for="Color" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="Date" class="form-label-mac">
                                        <i class="fas fa-calendar"></i>Application Date<span class="required">*</span>
                                    </label>
                                    <input asp-for="Date" class="form-control-mac" type="date" />
                                    <span asp-validation-for="Date" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="RegistrationExpiryDate" class="form-label-mac">
                                        <i class="fas fa-calendar-times"></i>Registration Expiry Date<span class="required">*</span>
                                    </label>
                                    <input asp-for="RegistrationExpiryDate" class="form-control-mac" type="date" />
                                    <span asp-validation-for="RegistrationExpiryDate" class="invalid-feedback-mac"></span>
                                </div>
                            </div>

                            <!-- Documents Section -->
                            <div class="col-12 mt-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-file-alt me-2"></i>Required Documents
                                </h5>
                                <hr class="mb-4">
                            </div>
            
                            <div class="col-md-12">
                                <label class="form-label fw-medium mb-3">
                                    <i class="fas fa-file-alt me-2"></i>Attached Study Load and Registration
                                </label>
                
                                <!-- Enhanced File Upload Area - Mac Style -->
                                <div id="fileUploadArea" class="file-upload-zone-mac border border-2 border-dashed rounded-3 p-5 text-center mb-4 position-relative" style="border-color: rgba(37, 99, 235, 0.3); background: linear-gradient(145deg, rgba(248, 250, 252, 0.8) 0%, rgba(255, 255, 255, 0.6) 100%); transition: all 0.3s ease; min-height: 200px;">
                                    <div class="upload-content">
                                        <div class="upload-icon mb-3">
                                            <i class="fas fa-cloud-upload-alt fa-4x" style="color: #2563eb; opacity: 0.7;"></i>
                                        </div>
                                        <h4 class="fw-bold mb-2" style="color: #1e293b;">Drag & Drop Files Here</h4>
                                        <p class="text-muted mb-3" style="color: #64748b;">or click to browse and select multiple files</p>
                        
                                        <!-- Hidden File Input -->
                                        <input type="file" id="fileInput" name="files" multiple accept=".pdf,.doc,.docx,.jpg,.jpeg,.png" style="display: none;">
                        
                                        <!-- Browse Button -->
                                        <button type="button" class="btn-submit-mac mb-3" onclick="document.getElementById('fileInput').click()" style="padding: 0.75rem 2rem;">
                                            <i class="fas fa-folder-open"></i>Browse Files
                                        </button>
                        
                                        <!-- File Format Info -->
                                        <div class="file-format-info mt-3">
                                            <div class="row justify-content-center">
                                                <div class="col-auto">
                                                    <div class="d-flex align-items-center gap-3 flex-wrap justify-content-center">
                                                        <span class="badge-status" style="background: linear-gradient(145deg, rgba(220, 38, 38, 0.15) 0%, rgba(220, 38, 38, 0.1) 100%); color: #dc2626; border: 1px solid rgba(220, 38, 38, 0.2); padding: 0.5rem 1rem;">
                                                            <i class="fas fa-file-pdf me-1"></i>PDF
                                                        </span>
                                                        <span class="badge-status" style="background: linear-gradient(145deg, rgba(37, 99, 235, 0.15) 0%, rgba(37, 99, 235, 0.1) 100%); color: #2563eb; border: 1px solid rgba(37, 99, 235, 0.2); padding: 0.5rem 1rem;">
                                                            <i class="fas fa-file-word me-1"></i>DOC/DOCX
                                                        </span>
                                                        <span class="badge-status" style="background: linear-gradient(145deg, rgba(5, 150, 105, 0.15) 0%, rgba(5, 150, 105, 0.1) 100%); color: #059669; border: 1px solid rgba(5, 150, 105, 0.2); padding: 0.5rem 1rem;">
                                                            <i class="fas fa-file-image me-1"></i>JPG/PNG
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <small class="text-muted d-block mt-2">
                                                <i class="fas fa-info-circle me-1"></i>Maximum file size: 5MB per file
                                            </small>
                                        </div>
                                    </div>
                    
                                    <!-- Upload Progress Overlay -->
                                    <div id="uploadProgress" class="position-absolute top-0 start-0 w-100 h-100 d-none upload-progress d-flex align-items-center justify-content-center" style="background: rgba(255, 255, 255, 0.9);">
                                        <div class="text-center">
                                            <div class="spinner-border text-primary mb-3" role="status">
                                                <span class="visually-hidden">Uploading...</span>
                                            </div>
                                            <p class="text-primary fw-medium">Processing files...</p>
                                        </div>
                                    </div>
                                </div>
                
                                <!-- File List Container -->
                                <div id="fileList" class="file-list-container" style="display: none;">
                                    <div class="form-card" style="margin-top: 1.5rem;">
                                        <div class="form-card-header" style="background: linear-gradient(145deg, rgba(37, 99, 235, 0.1) 0%, rgba(37, 99, 235, 0.05) 100%);">
                                            <h5 style="color: #2563eb; font-size: 1rem;">
                                                <i class="fas fa-paperclip"></i>Selected Files
                                                <span id="fileCount" class="badge-id" style="margin-left: 0.75rem; background: white; color: #2563eb; border: 1px solid rgba(37, 99, 235, 0.3);">0</span>
                                            </h5>
                                        </div>
                                        <div class="form-card-body" style="padding: 1rem;">
                                            <div id="fileItems" class="list-group list-group-flush"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                
                            <!-- Existing Files Display -->
                @if (Model.Documents != null && Model.Documents.Any())
                {
                    <div class="existing-files-container mt-4">
                        <div class="card shadow-sm">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">
                                    <i class="fas fa-paperclip me-2"></i>Attached Documents
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    @foreach (var document in Model.Documents)
                                    {
                                        <div class="col-md-6">
                                            <div class="border rounded p-3 h-100">
                                                <div class="d-flex align-items-center mb-2">
                                                    @if (document.ContentType.Contains("pdf"))
                                                    {
                                                        <i class="fas fa-file-pdf fa-2x text-danger me-3"></i>
                                                    }
                                                    else if (document.ContentType.Contains("word") || document.ContentType.Contains("document"))
                                                    {
                                                        <i class="fas fa-file-word fa-2x text-primary me-3"></i>
                                                    }
                                                    else if (document.ContentType.Contains("image"))
                                                    {
                                                        <i class="fas fa-file-image fa-2x text-success me-3"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="fas fa-file fa-2x text-muted me-3"></i>
                                                    }
                                                    <div class="flex-grow-1">
                                                        <h6 class="mb-1">@document.FileName</h6>
                                                        <small class="text-muted">
                                                            @(Math.Round((double)document.FileSize / 1024 / 1024, 2)) MB
                                                        </small>
                                                    </div>
                                                </div>
                                                <div class="d-flex gap-2">
                                                    <a href="~/uploads/gatepasses/@document.StoredFileName" target="_blank" class="btn btn-outline-primary btn-sm rounded">
                                                        <i class="fas fa-eye me-1"></i>View
                                                    </a>
                                                    <a href="~/uploads/gatepasses/@document.StoredFileName" download="@document.FileName" class="btn btn-outline-secondary btn-sm rounded">
                                                        <i class="fas fa-download me-1"></i>Download
                                                    </a>
                                                    <button type="button" class="btn btn-outline-danger btn-sm rounded" onclick="deleteDocument(@document.Id, '@document.FileName')">
                                                        <i class="fas fa-trash me-1"></i>Delete
                                                    </button>
                                                </div>
                                                <div class="mt-2">
                                                    <small class="text-muted">
                                                        Uploaded: @document.UploadedAt.ToString("MMM dd, yyyy 'at' h:mm tt")
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }

                            <!-- Additional Information Section -->
                            <div class="col-12 mt-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-comment me-2"></i>Additional Information
                                </h5>
                                <hr class="mb-4">
                            </div>
                            
                            <div class="col-md-12">
                                <div class="form-group-mac">
                                    <label asp-for="Remarks" class="form-label-mac">
                                        <i class="fas fa-comment"></i>Remarks
                                    </label>
                                    <textarea asp-for="Remarks" class="form-control-mac form-textarea-mac" placeholder="Enter remarks (optional)" style="min-height: 100px;"></textarea>
                                    <span asp-validation-for="Remarks" class="invalid-feedback-mac"></span>
                                </div>
                            </div>

                            <!-- Gate Pass Preview Card -->
                            <div class="col-12 mt-4">
                                <div class="card bg-light border-0">
                                    <div class="card-body">
                                        <h6 class="text-primary mb-3">
                                            <i class="fas fa-eye me-2"></i>Updated Gate Pass Preview
                                        </h6>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar bg-primary rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                <i class="fas fa-car text-white"></i>
                                            </div>
                                            <div>
                                                <div class="fw-bold" id="previewName">@Model.Name</div>
                                                <div class="text-muted small" id="previewDepartment">@Model.Department</div>
                                                <div class="text-muted small" id="previewVehicle">@Model.VehiclePlateNo - @Model.VehicleType</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Form Actions -->
                        <div class="row mt-5">
                            <div class="col-12">
                                <div class="form-actions">
                                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn-cancel-mac">
                                        <i class="fas fa-times"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn-submit-mac">
                                        <i class="fas fa-save"></i>Update Gate Pass
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Help Section -->
            <div class="card mt-4 border-0 bg-light">
                <div class="card-body">
                    <h6 class="text-primary mb-3">
                        <i class="fas fa-info-circle me-2"></i>Update Guidelines
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Verify all information is accurate</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Update vehicle details if changed</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Review attached documents</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Add any additional remarks</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/GatePass/edit.js"></script>
}