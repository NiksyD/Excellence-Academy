@model MyWebApplication.Models.GatePass

@{
    ViewData["Title"] = "Edit Gate Pass - Excellence Academy";
}

<!-- Header Section -->
<section class="bg-primary text-white py-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold mb-2">
                    <i class="fas fa-edit me-3"></i>Edit Gate Pass
                </h1>
                <p class="lead mb-0">Update gate pass application for @Model.Name</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Index" class="btn btn-light rounded px-4">
                    <i class="fas fa-arrow-left me-2"></i>Back to Gate Passes
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-light py-4">
                    <h4 class="mb-0 text-center">
                        <i class="fas fa-car text-primary me-2"></i>
                        Gate Pass Application Update
                    </h4>
                </div>
                <div class="card-body p-5">
                    <!-- Application Info Alert -->
                    <div class="alert alert-info d-flex align-items-center mb-4">
                        <i class="fas fa-info-circle me-2"></i>
                        <span>Application ID: <strong>#@Model.Id</strong> | Status: 
                            @if (Model.Status == "Pending")
                            {
                                <span class="badge bg-warning">Pending</span>
                            }
                            else if (Model.Status == "Approved")
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else if (Model.Status == "Rejected")
                            {
                                <span class="badge bg-danger">Rejected</span>
                            }
                        </span>
                    </div>

                    <form asp-action="Edit" method="post" enctype="multipart/form-data" id="editGatePassForm">
                        <div class="row g-4">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="DateCreated" />
                            <input type="hidden" asp-for="Status" />
                            <input type="hidden" asp-for="ApprovedBy" />
                            <input type="hidden" asp-for="ApprovalDate" />
                            
                            <!-- Personal Information Section -->
                            <div class="col-12">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-user me-2"></i>Personal Information
                                </h5>
                                <hr class="mb-4">
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Name" class="form-control" placeholder="Full Name" />
                                    <label asp-for="Name" class="form-label">
                                        <i class="fas fa-user me-2"></i>Full Name
                                    </label>
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="Department" class="form-select">
                                        <option value="">Select Department</option>
                                        <option value="Computer Science">Computer Science</option>
                                        <option value="Information Technology">Information Technology</option>
                                        <option value="Engineering">Engineering</option>
                                        <option value="Business Administration">Business Administration</option>
                                        <option value="Education">Education</option>
                                        <option value="Arts and Sciences">Arts and Sciences</option>
                                        <option value="Nursing">Nursing</option>
                                        <option value="Architecture">Architecture</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <label asp-for="Department" class="form-label">
                                        <i class="fas fa-building me-2"></i>Department
                                    </label>
                                    <span asp-validation-for="Department" class="text-danger small"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <div class="form-floating mb-3">
                                    <textarea asp-for="Address" class="form-control" placeholder="Complete Address" style="height: 100px"></textarea>
                                    <label asp-for="Address" class="form-label">
                                        <i class="fas fa-map-marker-alt me-2"></i>Address
                                    </label>
                                    <span asp-validation-for="Address" class="text-danger small"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Faculty" class="form-control" placeholder="Faculty" />
                                    <label asp-for="Faculty" class="form-label">
                                        <i class="fas fa-chalkboard-teacher me-2"></i>Faculty
                                    </label>
                                    <span asp-validation-for="Faculty" class="text-danger small"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="CourseYear" class="form-control" placeholder="Course & Year" />
                                    <label asp-for="CourseYear" class="form-label">
                                        <i class="fas fa-graduation-cap me-2"></i>Course & Year
                                    </label>
                                    <span asp-validation-for="CourseYear" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Vehicle Information Section -->
                            <div class="col-12 mt-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-car me-2"></i>Vehicle Information
                                </h5>
                                <hr class="mb-4">
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="VehiclePlateNo" class="form-control text-uppercase" placeholder="Plate Number" />
                                    <label asp-for="VehiclePlateNo" class="form-label">
                                        <i class="fas fa-id-badge me-2"></i>Vehicle Plate No.
                                    </label>
                                    <span asp-validation-for="VehiclePlateNo" class="text-danger small"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="VehicleType" class="form-select">
                                        <option value="">Select Vehicle Type</option>
                                        <option value="Motorcycle">Motorcycle</option>
                                        <option value="Car">Car</option>
                                        <option value="SUV">SUV</option>
                                        <option value="Van">Van</option>
                                        <option value="Truck">Truck</option>
                                        <option value="Bicycle">Bicycle</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <label asp-for="VehicleType" class="form-label">
                                        <i class="fas fa-car me-2"></i>Vehicle Type
                                    </label>
                                    <span asp-validation-for="VehicleType" class="text-danger small"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Maker" class="form-control" placeholder="Vehicle Maker" />
                                    <label asp-for="Maker" class="form-label">
                                        <i class="fas fa-industry me-2"></i>Maker
                                    </label>
                                    <span asp-validation-for="Maker" class="text-danger small"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Color" class="form-control" placeholder="Vehicle Color" />
                                    <label asp-for="Color" class="form-label">
                                        <i class="fas fa-palette me-2"></i>Color
                                    </label>
                                    <span asp-validation-for="Color" class="text-danger small"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Date" class="form-control" type="date" />
                                    <label asp-for="Date" class="form-label">
                                        <i class="fas fa-calendar me-2"></i>Application Date
                                    </label>
                                    <span asp-validation-for="Date" class="text-danger small"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="RegistrationExpiryDate" class="form-control" type="date" />
                                    <label asp-for="RegistrationExpiryDate" class="form-label">
                                        <i class="fas fa-calendar-times me-2"></i>Registration Expiry Date
                                    </label>
                                    <span asp-validation-for="RegistrationExpiryDate" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Documents Section -->
                            <div class="col-12 mt-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-file-alt me-2"></i>Required Documents
                                </h5>
                                <hr class="mb-4">
                            </div>
            
                            <div class="col-md-12">
                                <label class="form-label fw-medium mb-3">
                                    <i class="fas fa-file-alt me-2"></i>Attached Study Load and Registration
                                </label>
                
                                <!-- Enhanced File Upload Area -->
                                <div id="fileUploadArea" class="file-upload-zone border border-2 border-dashed rounded-3 p-5 text-center mb-4 position-relative" style="border-color: #dee2e6; background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%); transition: all 0.3s ease; min-height: 200px;">
                                    <div class="upload-content">
                                        <div class="upload-icon mb-3">
                                            <i class="fas fa-cloud-upload-alt fa-4x text-primary opacity-75"></i>
                                        </div>
                                        <h4 class="fw-bold text-dark mb-2">Drag & Drop Files Here</h4>
                                        <p class="text-muted mb-3">or click to browse and select multiple files</p>
                        
                                        <!-- Hidden File Input -->
                                        <input type="file" id="fileInput" name="files" multiple accept=".pdf,.doc,.docx,.jpg,.jpeg,.png" style="display: none;">
                        
                                        <!-- Browse Button -->
                                        <button type="button" class="btn btn-primary btn-lg rounded px-4 py-2 mb-3" onclick="document.getElementById('fileInput').click()">
                                            <i class="fas fa-folder-open me-2"></i>Browse Files
                                        </button>
                        
                                        <!-- File Format Info -->
                                        <div class="file-format-info mt-3">
                                            <div class="row justify-content-center">
                                                <div class="col-auto">
                                                    <div class="d-flex align-items-center gap-3 flex-wrap justify-content-center">
                                                        <span class="badge bg-danger-subtle text-danger px-3 py-2">
                                                            <i class="fas fa-file-pdf me-1"></i>PDF
                                                        </span>
                                                        <span class="badge bg-primary-subtle text-primary px-3 py-2">
                                                            <i class="fas fa-file-word me-1"></i>DOC/DOCX
                                                        </span>
                                                        <span class="badge bg-success-subtle text-success px-3 py-2">
                                                            <i class="fas fa-file-image me-1"></i>JPG/PNG
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <small class="text-muted d-block mt-2">
                                                <i class="fas fa-info-circle me-1"></i>Maximum file size: 5MB per file
                                            </small>
                                        </div>
                                    </div>
                    
                                    <!-- Upload Progress Overlay -->
                                    <div id="uploadProgress" class="position-absolute top-0 start-0 w-100 h-100 d-none upload-progress d-flex align-items-center justify-content-center" style="background: rgba(255, 255, 255, 0.9);">
                                        <div class="text-center">
                                            <div class="spinner-border text-primary mb-3" role="status">
                                                <span class="visually-hidden">Uploading...</span>
                                            </div>
                                            <p class="text-primary fw-medium">Processing files...</p>
                                        </div>
                                    </div>
                                </div>
                
                                <!-- File List Container -->
                                <div id="fileListContainer" class="file-list-container d-none">
                                    <div class="card shadow-sm">
                                        <div class="card-header text-white d-flex justify-content-between align-items-center">
                                            <h6 class="mb-0">
                                                <i class="fas fa-files me-2"></i>Selected Files
                                            </h6>
                                            <span id="fileCount" class="badge bg-light text-primary">0</span>
                                        </div>
                                        <div class="card-body p-0">
                                            <ul id="fileList" class="list-group list-group-flush">
                                                <!-- Files will be added here dynamically -->
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                
                                <!-- Existing Files Display -->
                @if (Model.Documents != null && Model.Documents.Any())
                {
                    <div class="existing-files-container mt-4">
                        <div class="card shadow-sm">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">
                                    <i class="fas fa-paperclip me-2"></i>Attached Documents
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    @foreach (var document in Model.Documents)
                                    {
                                        <div class="col-md-6">
                                            <div class="border rounded p-3 h-100">
                                                <div class="d-flex align-items-center mb-2">
                                                    @if (document.ContentType.Contains("pdf"))
                                                    {
                                                        <i class="fas fa-file-pdf fa-2x text-danger me-3"></i>
                                                    }
                                                    else if (document.ContentType.Contains("word") || document.ContentType.Contains("document"))
                                                    {
                                                        <i class="fas fa-file-word fa-2x text-primary me-3"></i>
                                                    }
                                                    else if (document.ContentType.Contains("image"))
                                                    {
                                                        <i class="fas fa-file-image fa-2x text-success me-3"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="fas fa-file fa-2x text-muted me-3"></i>
                                                    }
                                                    <div class="flex-grow-1">
                                                        <h6 class="mb-1">@document.FileName</h6>
                                                        <small class="text-muted">
                                                            @(Math.Round((double)document.FileSize / 1024 / 1024, 2)) MB
                                                        </small>
                                                    </div>
                                                </div>
                                                <div class="d-flex gap-2">
                                                    <a href="~/uploads/gatepasses/@document.StoredFileName" target="_blank" class="btn btn-outline-primary btn-sm rounded">
                                                        <i class="fas fa-eye me-1"></i>View
                                                    </a>
                                                    <a href="~/uploads/gatepasses/@document.StoredFileName" download="@document.FileName" class="btn btn-outline-secondary btn-sm rounded">
                                                        <i class="fas fa-download me-1"></i>Download
                                                    </a>
                                                    <button type="button" class="btn btn-outline-danger btn-sm rounded" onclick="deleteDocument(@document.Id, '@document.FileName')">
                                                        <i class="fas fa-trash me-1"></i>Delete
                                                    </button>
                                                </div>
                                                <div class="mt-2">
                                                    <small class="text-muted">
                                                        Uploaded: @document.UploadedAt.ToString("MMM dd, yyyy 'at' h:mm tt")
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

                            <!-- Additional Information Section -->
                            <div class="col-12 mt-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-comment me-2"></i>Additional Information
                                </h5>
                                <hr class="mb-4">
                            </div>
                            
                            <div class="col-md-12">
                                <div class="form-floating mb-3">
                                    <textarea asp-for="Remarks" class="form-control" placeholder="Remarks" style="height: 100px"></textarea>
                                    <label asp-for="Remarks" class="form-label">
                                        <i class="fas fa-comment me-2"></i>Remarks
                                    </label>
                                    <span asp-validation-for="Remarks" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Gate Pass Preview Card -->
                            <div class="col-12 mt-4">
                                <div class="card bg-light border-0">
                                    <div class="card-body">
                                        <h6 class="text-primary mb-3">
                                            <i class="fas fa-eye me-2"></i>Updated Gate Pass Preview
                                        </h6>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar bg-primary rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                <i class="fas fa-car text-white"></i>
                                            </div>
                                            <div>
                                                <div class="fw-bold" id="previewName">@Model.Name</div>
                                                <div class="text-muted small" id="previewDepartment">@Model.Department</div>
                                                <div class="text-muted small" id="previewVehicle">@Model.VehiclePlateNo - @Model.VehicleType</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Form Actions -->
                        <div class="row mt-5">
                            <div class="col-12">
                                <div class="d-flex flex-column flex-md-row justify-content-between align-items-stretch align-items-md-center gap-3">
                                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info btn-lg rounded px-4">
                                        <i class="fas fa-eye me-2"></i>View Details
                                    </a>
                                    <div class="d-flex flex-column flex-sm-row gap-2">
                                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded px-4">
                                            <i class="fas fa-times me-2"></i>Cancel
                                        </a>
                                        <button type="submit" class="btn btn-success btn-lg rounded px-5">
                                            <i class="fas fa-save me-2"></i>Update Application
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Help Section -->
            <div class="card mt-4 border-0 bg-light">
                <div class="card-body">
                    <h6 class="text-primary mb-3">
                        <i class="fas fa-info-circle me-2"></i>Update Guidelines
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Verify all information is accurate</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Update vehicle details if changed</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Review attached documents</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Add any additional remarks</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/GatePass/create.css" />
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/GatePass/edit.js"></script>
}