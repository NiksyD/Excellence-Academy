@model MyWebApplication.Models.GatePass

@{
    ViewData["Title"] = "Create Gate Pass - Excellence Academy";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Shared/form-page.css" asp-append-version="true" />
}

<!-- Header Section - Mac Style -->
<section class="form-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-2">
                    <i class="fas fa-id-card me-3 header-icon"></i>Create Gate Pass
                </h1>
                <p class="lead mb-0">Submit a new vehicle gate pass application</p>
            </div>
            <div class="col-md-4 text-md-end">
                <a asp-action="Index" class="btn-cancel-mac">
                    <i class="fas fa-arrow-left"></i>Back to Gate Passes
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="form-card fade-in-up" style="animation-delay: 0.1s">
                <div class="form-card-header">
                    <h5>
                        <i class="fas fa-car"></i>
                        Gate Pass Application Form
                    </h5>
                </div>
                <div class="form-card-body">
                    <form asp-action="Create" method="post" id="gatePassForm" enctype="multipart/form-data">
                        <div class="row g-4">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            
                            <!-- Personal Information Section -->
                            <div class="col-12">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-user me-2"></i>Personal Information
                                </h5>
                                <hr class="mb-4">
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="Name" class="form-label-mac">
                                        <i class="fas fa-user"></i>Full Name<span class="required">*</span>
                                    </label>
                                    <input asp-for="Name" class="form-control-mac" placeholder="Enter full name" />
                                    <span asp-validation-for="Name" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="Department" class="form-label-mac">
                                        <i class="fas fa-building"></i>Department<span class="required">*</span>
                                    </label>
                                    <select asp-for="Department" class="form-select-mac">
                                        <option value="">Select Department</option>
                                        <option value="Computer Science">Computer Science</option>
                                        <option value="Information Technology">Information Technology</option>
                                        <option value="Engineering">Engineering</option>
                                        <option value="Business Administration">Business Administration</option>
                                        <option value="Education">Education</option>
                                        <option value="Arts and Sciences">Arts and Sciences</option>
                                        <option value="Nursing">Nursing</option>
                                        <option value="Architecture">Architecture</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="Department" class="text-danger small"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <div class="form-group-mac">
                                    <label asp-for="Address" class="form-label-mac">
                                        <i class="fas fa-map-marker-alt"></i>Address<span class="required">*</span>
                                    </label>
                                    <textarea asp-for="Address" class="form-control-mac form-textarea-mac" placeholder="Enter complete address" style="min-height: 100px;"></textarea>
                                    <span asp-validation-for="Address" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="Faculty" class="form-label-mac">
                                        <i class="fas fa-chalkboard-teacher"></i>Faculty<span class="required">*</span>
                                    </label>
                                    <input asp-for="Faculty" class="form-control-mac" placeholder="Enter faculty" />
                                    <span asp-validation-for="Faculty" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="CourseYear" class="form-label-mac">
                                        <i class="fas fa-graduation-cap"></i>Course & Year<span class="required">*</span>
                                    </label>
                                    <input asp-for="CourseYear" class="form-control-mac" placeholder="Enter course & year" />
                                    <span asp-validation-for="CourseYear" class="invalid-feedback-mac"></span>
                                </div>
                            </div>

                            <!-- Vehicle Information Section -->
                            <div class="col-12 mt-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-car me-2"></i>Vehicle Information
                                </h5>
                                <hr class="mb-4">
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="VehiclePlateNo" class="form-label-mac">
                                        <i class="fas fa-id-badge"></i>Vehicle Plate No.<span class="required">*</span>
                                    </label>
                                    <input asp-for="VehiclePlateNo" class="form-control-mac text-uppercase" placeholder="Enter plate number" />
                                    <span asp-validation-for="VehiclePlateNo" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="VehicleType" class="form-label-mac">
                                        <i class="fas fa-car"></i>Vehicle Type<span class="required">*</span>
                                    </label>
                                    <select asp-for="VehicleType" class="form-select-mac">
                                        <option value="">Select Vehicle Type</option>
                                        <option value="Motorcycle">Motorcycle</option>
                                        <option value="Car">Car</option>
                                        <option value="SUV">SUV</option>
                                        <option value="Van">Van</option>
                                        <option value="Truck">Truck</option>
                                        <option value="Bicycle">Bicycle</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="VehicleType" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="Maker" class="form-label-mac">
                                        <i class="fas fa-industry"></i>Maker<span class="required">*</span>
                                    </label>
                                    <input asp-for="Maker" class="form-control-mac" placeholder="Enter vehicle maker" />
                                    <span asp-validation-for="Maker" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="Color" class="form-label-mac">
                                        <i class="fas fa-palette"></i>Color<span class="required">*</span>
                                    </label>
                                    <input asp-for="Color" class="form-control-mac" placeholder="Enter vehicle color" />
                                    <span asp-validation-for="Color" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="Date" class="form-label-mac">
                                        <i class="fas fa-calendar"></i>Application Date<span class="required">*</span>
                                    </label>
                                    <input asp-for="Date" class="form-control-mac" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                    <span asp-validation-for="Date" class="invalid-feedback-mac"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group-mac">
                                    <label asp-for="RegistrationExpiryDate" class="form-label-mac">
                                        <i class="fas fa-calendar-times"></i>Registration Expiry Date<span class="required">*</span>
                                    </label>
                                    <input asp-for="RegistrationExpiryDate" class="form-control-mac" type="date" />
                                    <span asp-validation-for="RegistrationExpiryDate" class="invalid-feedback-mac"></span>
                                </div>
                            </div>

                            <!-- Documents Section -->
                            <div class="col-12 mt-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-file-alt me-2"></i>Required Documents
                                </h5>
                                <hr class="mb-4">
                            </div>
                            
                            <div class="col-md-12">
                                <label class="form-label-mac">
                                    <i class="fas fa-file-alt"></i>Attached Study Load and Registration<span class="required">*</span>
                                </label>
                                
                                <!-- Enhanced File Upload Area - Mac Style -->
                                <div id="fileUploadArea" class="file-upload-zone-mac border border-2 border-dashed rounded-3 p-5 text-center mb-4 position-relative" style="border-color: rgba(37, 99, 235, 0.3); background: linear-gradient(145deg, rgba(248, 250, 252, 0.8) 0%, rgba(255, 255, 255, 0.6) 100%); transition: all 0.3s ease; min-height: 200px;">
                                    <div class="upload-content">
                                        <div class="upload-icon mb-3">
                                            <i class="fas fa-cloud-upload-alt fa-4x" style="color: #2563eb; opacity: 0.7;"></i>
                                        </div>
                                        <h4 class="fw-bold mb-2" style="color: #1e293b;">Drag & Drop Files Here</h4>
                                        <p class="text-muted mb-3" style="color: #64748b;">or click to browse and select multiple files</p>
                                        
                                        <!-- Hidden File Input -->
                                        <input type="file" id="fileInput" name="files" multiple accept=".pdf,.doc,.docx,.jpg,.jpeg,.png" style="display: none;">
                                        
                                        <!-- Browse Button - Mac Style -->
                                        <button type="button" class="btn-submit-mac mb-3" onclick="document.getElementById('fileInput').click()" style="padding: 0.75rem 2rem;">
                                            <i class="fas fa-folder-open"></i>Browse Files
                                        </button>
                                        
                                        <!-- File Format Info -->
                                        <div class="file-format-info mt-3">
                                            <div class="row justify-content-center">
                                                <div class="col-auto">
                                                    <div class="d-flex align-items-center gap-3 flex-wrap justify-content-center">
                                                        <span class="badge-status" style="background: linear-gradient(145deg, rgba(220, 38, 38, 0.15) 0%, rgba(220, 38, 38, 0.1) 100%); color: #dc2626; border: 1px solid rgba(220, 38, 38, 0.2); padding: 0.5rem 1rem;">
                                                            <i class="fas fa-file-pdf me-1"></i>PDF
                                                        </span>
                                                        <span class="badge-status" style="background: linear-gradient(145deg, rgba(37, 99, 235, 0.15) 0%, rgba(37, 99, 235, 0.1) 100%); color: #2563eb; border: 1px solid rgba(37, 99, 235, 0.2); padding: 0.5rem 1rem;">
                                                            <i class="fas fa-file-word me-1"></i>DOC/DOCX
                                                        </span>
                                                        <span class="badge-status" style="background: linear-gradient(145deg, rgba(5, 150, 105, 0.15) 0%, rgba(5, 150, 105, 0.1) 100%); color: #059669; border: 1px solid rgba(5, 150, 105, 0.2); padding: 0.5rem 1rem;">
                                                            <i class="fas fa-file-image me-1"></i>JPG/PNG
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <small class="text-muted d-block mt-2">
                                                <i class="fas fa-info-circle me-1"></i>Maximum file size: 5MB per file
                                            </small>
                                        </div>
                                    </div>
                                    
                                    <!-- Upload Progress Overlay (hidden by default) -->
                                    <div id="uploadProgress" class="upload-progress position-absolute top-0 start-0 w-100 h-100 d-none align-items-center justify-content-center bg-white bg-opacity-90 rounded-3">
                                        <div class="text-center">
                                            <div class="spinner-border text-primary mb-3" role="status">
                                                <span class="visually-hidden">Uploading...</span>
                                            </div>
                                            <h5 class="text-primary">Processing Files...</h5>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Enhanced File List Display - Mac Style -->
                                <div id="fileList" class="file-list-container" style="display: none;">
                                    <div class="form-card" style="margin-top: 1.5rem;">
                                        <div class="form-card-header" style="background: linear-gradient(145deg, rgba(37, 99, 235, 0.1) 0%, rgba(37, 99, 235, 0.05) 100%);">
                                            <h5 style="color: #2563eb; font-size: 1rem;">
                                                <i class="fas fa-paperclip"></i>Selected Files
                                                <span id="fileCount" class="badge-id" style="margin-left: 0.75rem; background: white; color: #2563eb; border: 1px solid rgba(37, 99, 235, 0.3);">0</span>
                                            </h5>
                                        </div>
                                        <div class="form-card-body" style="padding: 1rem;">
                                            <div id="fileItems" class="list-group list-group-flush"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Additional Information Section -->
                            <div class="col-12 mt-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-comment me-2"></i>Additional Information
                                </h5>
                                <hr class="mb-4">
                            </div>
                            
                            <div class="col-md-12">
                                <div class="form-floating mb-3">
                                    <textarea asp-for="Remarks" class="form-control" placeholder="Remarks" style="height: 100px"></textarea>
                                    <label asp-for="Remarks" class="form-label">
                                        <i class="fas fa-comment me-2"></i>Remarks
                                    </label>
                                    <span asp-validation-for="Remarks" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Gate Pass Preview Card -->
                            <div class="col-12 mt-4">
                                <div class="card bg-light border-0" id="gatePassPreview" style="display: none;">
                                    <div class="card-body">
                                        <h6 class="text-primary mb-3">
                                            <i class="fas fa-eye me-2"></i>Gate Pass Preview
                                        </h6>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar bg-primary rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                <i class="fas fa-car text-white"></i>
                                            </div>
                                            <div>
                                                <div class="fw-bold" id="previewName">Applicant Name</div>
                                                <div class="text-muted small" id="previewDepartment">Department</div>
                                                <div class="text-muted small" id="previewVehicle">Vehicle Info</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Form Actions -->
                        <div class="form-actions">
                            <a asp-action="Index" class="btn-cancel-mac">
                                <i class="fas fa-times"></i>Cancel
                            </a>
                            <button type="submit" class="btn-submit-mac">
                                <i class="fas fa-save"></i>Submit Application
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Help Section -->
            <div class="card mt-4 border-0 bg-light">
                <div class="card-body">
                    <h6 class="text-primary mb-3">
                        <i class="fas fa-info-circle me-2"></i>Application Guidelines
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>All required fields must be completed</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Provide accurate vehicle information</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Attach required documents</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Review information before submission</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/GatePass/create.js"></script>
}