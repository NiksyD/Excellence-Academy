@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "/Views/Shared/_AuthLayout.cshtml";
}

<div class="row g-0 min-vh-100" style="margin: -2rem -2rem; overflow: hidden;">
    <!-- LEFT SIDE: IMAGE -->
    <div class="col-lg-6 d-none d-lg-block position-relative">
        <div style="background-color: var(--bg-sidebar); height: 100%; width: 100%; display: flex; align-items: center; justify-content: center; position: relative;">
            <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; opacity: 0.1; background-image: radial-gradient(circle at 50% 50%, #ffffff 1px, transparent 1px); background-size: 30px 30px;"></div>
            
            <div class="text-center p-5 position-relative z-1">
                <i class="fas fa-graduation-cap mb-4" style="font-size: 5rem; color: var(--accent);"></i>
                <h2 class="display-5 fw-bold text-white mb-3" style="font-family: 'Playfair Display', serif;">Excellence Academy</h2>
                <p class="lead text-white-50">Welcome back to the portal of knowledge.</p>
            </div>
        </div>
    </div>

    <!-- RIGHT SIDE: FORM -->
    <div class="col-lg-6 d-flex align-items-center justify-content-center bg-white">
        <div class="p-5" style="width: 100%; max-width: 500px;">
            <div class="mb-5 text-center text-lg-start">
                <h1 class="fw-bold mb-2">Member Login</h1>
                <p class="text-muted">Enter your credentials to access your account.</p>
            </div>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" style="border-radius: 0; border: none; border-bottom: 2px solid #e2e8f0; background: transparent; padding-left: 0; box-shadow: none;" />
                    <label asp-for="Input.Email" class="text-muted ps-0">Email address</label>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>
                
                <div class="form-floating mb-4">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" style="border-radius: 0; border: none; border-bottom: 2px solid #e2e8f0; background: transparent; padding-left: 0; box-shadow: none;" />
                    <label asp-for="Input.Password" class="text-muted ps-0">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <label asp-for="Input.RememberMe" class="form-check-label text-muted small">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                   <!-- <a id="forgot-password" asp-page="./ForgotPassword" class="small text-decoration-none" style="color: var(--primary);">Forgot password?</a> -->
                </div>

                <button id="login-submit" type="submit" class="btn btn-primary w-100 py-3 mb-4 rounded-1 text-uppercase fw-bold" style="letter-spacing: 1px;">Sign In</button>
                
                <div class="text-center">
                    <p class="text-muted small">Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-bold" style="color: var(--accent);">Register here</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
