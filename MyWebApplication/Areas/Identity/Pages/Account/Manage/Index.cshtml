@page
@model MyWebApplication.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Profile";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-lg" style="border-radius: 1rem; overflow: hidden;">
            <div class="card-header bg-white border-0 pt-4 pb-0 text-center">
                <h2 class="fw-bold mb-1" style="color: var(--primary); font-family: 'Playfair Display', serif;">My Profile</h2>
                <p class="text-muted small text-uppercase" style="letter-spacing: 1px;">Manage your personal information</p>
            </div>
            <div class="card-body p-5 pt-4">
                <form id="profile-form" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 rounded-3 mb-4" role="alert"></div>
                    
                    <!-- Profile Image Section -->
                    <div class="mb-5 text-center">
                        <div class="position-relative d-inline-block">
                            <div style="width: 120px; height: 120px; border-radius: 50%; overflow: hidden; border: 3px solid var(--accent); box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);">
                                @if (Model.Input.ProfilePicture != null)
                                {
                                    <img style="width: 100%; height: 100%; object-fit: cover;" 
                                         src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))" alt="Profile Picture" />
                                }
                                else
                                {
                                    <div class="w-100 h-100 bg-light d-flex align-items-center justify-content-center text-secondary">
                                        <i class="fas fa-user fa-3x"></i>
                                    </div>
                                }
                            </div>
                            <label for="profileUpload" class="btn btn-primary btn-sm position-absolute bottom-0 end-0 rounded-circle shadow-sm" style="width: 36px; height: 36px; display: flex; align-items: center; justify-content: center; transform: translate(10%, 10%); border: 2px solid white;">
                                <i class="fas fa-camera fa-sm"></i>
                            </label>
                            <input type="file" id="profileUpload" asp-for="Input.ProfilePictureFile" class="d-none" accept=".jpg,.jpeg,.png" onchange="previewImage(this)" />
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Username" class="form-control bg-light border-0" placeholder="Username" disabled style="opacity: 0.7;" />
                        <label asp-for="Username" class="text-muted">Email / Username</label>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Name" class="form-control border-light shadow-sm" placeholder="Full Name" style="background-color: transparent;" />
                        <label asp-for="Input.Name" style="color: var(--primary);">Full Name</label>
                        <span asp-validation-for="Input.Name" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.PhoneNumber" class="form-control border-light shadow-sm" placeholder="Phone Number" style="background-color: transparent;" />
                        <label asp-for="Input.PhoneNumber" style="color: var(--primary);">Phone Number</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                    </div>
                    
                    <script>
                        function previewImage(input) {
                            if (input.files && input.files[0]) {
                                document.getElementById('profile-form').submit();
                            }
                        }
                    </script>

                    <button id="update-profile-button" type="submit" class="btn btn-primary w-100 py-3 rounded-3 fw-bold text-uppercase" style="letter-spacing: 1px;">
                        Save Changes
                    </button>
                    
                    <div class="text-center mt-3">
                         <a href="/" class="text-muted small text-decoration-none hover-accent">
                            <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
