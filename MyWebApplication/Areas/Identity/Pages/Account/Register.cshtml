@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "/Views/Shared/_AuthLayout.cshtml";
}

<div class="d-flex align-items-center justify-content-center min-vh-100 py-5" style="background-color: var(--bg-app);">
    <div class="card shadow-lg border-0 rounded-3" style="width: 100%; max-width: 500px;">
        <div class="card-body p-5">
            <div class="text-center mb-5">
                <i class="fas fa-user-plus mb-3" style="font-size: 3rem; color: var(--primary);"></i>
                <h2 class="fw-bold" style="font-family: 'Playfair Display', serif; color: var(--primary);">Join the Academy</h2>
                <p class="text-muted small">Create your account to start your journey.</p>
            </div>

            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.Name" class="form-control" autocomplete="name" aria-required="true" placeholder="John Doe" style="background-color: #F8FAFC; border-color: #E2E8F0;" />
                    <label asp-for="Input.Name" class="text-muted">Full Name</label>
                    <span asp-validation-for="Input.Name" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" style="background-color: #F8FAFC; border-color: #E2E8F0;" />
                    <label asp-for="Input.Email" class="text-muted">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" style="background-color: #F8FAFC; border-color: #E2E8F0;" />
                    <label asp-for="Input.Password" class="text-muted">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>
                
                <div class="form-floating mb-4">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" style="background-color: #F8FAFC; border-color: #E2E8F0;" />
                    <label asp-for="Input.ConfirmPassword" class="text-muted">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>

                <button id="registerSubmit" type="submit" class="btn btn-primary w-100 py-3 mb-4 rounded-1 text-uppercase fw-bold" style="letter-spacing: 1px;">Create Account</button>
                
                <div class="text-center">
                    <p class="text-muted small">Already a member? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-bold" style="color: var(--accent);">Sign In</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
